<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UI States Examples - Admin Dashboard</title>
    
    <link rel="stylesheet" href="enterprise-design-system.css">
    <link rel="stylesheet" href="admin-dashboard.css">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
    <div class="admin-layout" id="adminLayout">
        <!-- SIDEBAR -->
        <aside class="admin-layout__sidebar">
            <nav class="admin-sidebar">
                <div class="admin-sidebar__brand">
                    <div class="admin-sidebar__logo">E</div>
                    <span class="admin-sidebar__brand-text">EduAdmin</span>
                </div>
                
                <div class="admin-sidebar__nav">
                    <div class="admin-sidebar__section">
                        <div class="admin-sidebar__section-title">Overview</div>
                        <a href="index.html" class="admin-sidebar__link">
                            <i data-lucide="layout-dashboard" class="admin-sidebar__link-icon"></i>
                            <span class="admin-sidebar__link-text">Dashboard</span>
                        </a>
                    </div>
                    
                    <div class="admin-sidebar__section">
                        <div class="admin-sidebar__section-title">Content</div>
                        <a href="courses.html" class="admin-sidebar__link">
                            <i data-lucide="book-open" class="admin-sidebar__link-icon"></i>
                            <span class="admin-sidebar__link-text">Courses</span>
                        </a>
                    </div>
                    
                    <div class="admin-sidebar__section">
                        <div class="admin-sidebar__section-title">Examples</div>
                        <a href="examples.html" class="admin-sidebar__link admin-sidebar__link--active">
                            <i data-lucide="layout-grid" class="admin-sidebar__link-icon"></i>
                            <span class="admin-sidebar__link-text">UI States</span>
                        </a>
                    </div>
                </div>
            </nav>
        </aside>
        
        <!-- HEADER -->
        <header class="admin-layout__header">
            <div class="admin-header">
                <div class="admin-header__left">
                    <button class="admin-header__toggle" id="sidebarToggle" aria-label="Toggle sidebar">
                        <i data-lucide="menu" style="width: 20px; height: 20px;"></i>
                    </button>
                </div>
                
                <div class="admin-header__right">
                    <button class="admin-header__toggle" id="themeToggle" aria-label="Toggle theme">
                        <i data-lucide="moon" style="width: 20px; height: 20px;"></i>
                    </button>
                    
                    <div class="admin-header__profile">
                        <div class="admin-header__avatar">JD</div>
                        <div class="admin-header__user-info">
                            <span class="admin-header__user-name">Jane Doe</span>
                            <span class="admin-header__user-role">Super Admin</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        
        <!-- MAIN CONTENT -->
        <main class="admin-layout__main">
            <!-- PAGE HEADER -->
            <div style="margin-bottom: var(--space-8);">
                <h1 style="font-family: var(--font-display); font-size: var(--font-size-4xl); font-weight: var(--font-weight-bold); color: var(--text-primary); margin-bottom: var(--space-2);">
                    UI States & Examples
                </h1>
                <p style="font-size: var(--font-size-base); color: var(--text-secondary);">
                    Examples of empty states, loading states, and edge cases for production use.
                </p>
            </div>
            
            <!-- EMPTY STATE EXAMPLE -->
            <div class="data-table-container" style="margin-bottom: var(--space-8);">
                <div class="data-table__header">
                    <h2 class="data-table__title">Empty State Example</h2>
                    <div class="data-table__actions">
                        <button class="btn btn--primary btn--sm">
                            <i data-lucide="plus" class="btn__icon"></i>
                            Create First Course
                        </button>
                    </div>
                </div>
                
                <div class="data-table__empty">
                    <i data-lucide="book-open" class="data-table__empty-icon"></i>
                    <div class="data-table__empty-title">No courses yet</div>
                    <div class="data-table__empty-description">
                        Get started by creating your first course. Courses can contain lessons, quizzes, and assignments.
                    </div>
                    <button class="btn btn--primary" style="margin-top: var(--space-4);">
                        <i data-lucide="plus" class="btn__icon"></i>
                        Create Course
                    </button>
                </div>
            </div>
            
            <!-- LOADING STATE EXAMPLE -->
            <div class="data-table-container" style="margin-bottom: var(--space-8);">
                <div class="data-table__header">
                    <h2 class="data-table__title">Loading State Example</h2>
                </div>
                
                <div class="data-table__loading">
                    <div class="data-table__spinner"></div>
                    <p style="margin-top: var(--space-4); color: var(--text-secondary);">
                        Loading enrollments...
                    </p>
                </div>
            </div>
            
            <!-- NO RESULTS FROM SEARCH -->
            <div class="data-table-container" style="margin-bottom: var(--space-8);">
                <div class="data-table__header">
                    <h2 class="data-table__title">No Search Results</h2>
                </div>
                
                <div class="data-table__filters">
                    <div class="search-input">
                        <i data-lucide="search" class="search-input__icon"></i>
                        <input type="search" class="search-input__field" value="advanced quantum physics" placeholder="Search courses...">
                    </div>
                </div>
                
                <div class="data-table__empty">
                    <i data-lucide="search-x" class="data-table__empty-icon"></i>
                    <div class="data-table__empty-title">No results found</div>
                    <div class="data-table__empty-description">
                        We couldn't find any courses matching "advanced quantum physics". Try different keywords or clear filters.
                    </div>
                    <button class="btn btn--secondary" style="margin-top: var(--space-4);">
                        <i data-lucide="x" class="btn__icon"></i>
                        Clear Search
                    </button>
                </div>
            </div>
            
            <!-- ERROR STATE -->
            <div class="data-table-container" style="margin-bottom: var(--space-8);">
                <div class="data-table__header">
                    <h2 class="data-table__title">Error State Example</h2>
                </div>
                
                <div class="data-table__empty">
                    <i data-lucide="alert-circle" class="data-table__empty-icon" style="color: var(--color-error-500);"></i>
                    <div class="data-table__empty-title" style="color: var(--color-error-600);">
                        Failed to load data
                    </div>
                    <div class="data-table__empty-description">
                        There was a problem loading the progress data. Please check your connection and try again.
                    </div>
                    <button class="btn btn--primary" style="margin-top: var(--space-4);">
                        <i data-lucide="refresh-cw" class="btn__icon"></i>
                        Retry
                    </button>
                </div>
            </div>
            
            <!-- BUTTONS SHOWCASE -->
            <div style="background: var(--surface-primary); border: 1px solid var(--border-primary); border-radius: var(--radius-lg); padding: var(--space-6); margin-bottom: var(--space-8);">
                <h3 style="font-size: var(--font-size-xl); font-weight: var(--font-weight-semibold); margin-bottom: var(--space-6);">
                    Button Variants
                </h3>
                
                <div style="display: flex; flex-wrap: wrap; gap: var(--space-4); margin-bottom: var(--space-6);">
                    <button class="btn btn--primary">
                        <i data-lucide="plus" class="btn__icon"></i>
                        Primary Button
                    </button>
                    <button class="btn btn--secondary">
                        <i data-lucide="settings" class="btn__icon"></i>
                        Secondary Button
                    </button>
                    <button class="btn btn--danger">
                        <i data-lucide="trash-2" class="btn__icon"></i>
                        Danger Button
                    </button>
                    <button class="btn btn--ghost">
                        Ghost Button
                    </button>
                </div>
                
                <div style="display: flex; flex-wrap: wrap; gap: var(--space-4); margin-bottom: var(--space-6);">
                    <button class="btn btn--primary btn--sm">Small Primary</button>
                    <button class="btn btn--secondary btn--sm">Small Secondary</button>
                    <button class="btn btn--danger btn--sm">Small Danger</button>
                </div>
                
                <div style="display: flex; flex-wrap: wrap; gap: var(--space-4); margin-bottom: var(--space-6);">
                    <button class="btn btn--primary btn--lg">Large Primary</button>
                    <button class="btn btn--secondary btn--lg">Large Secondary</button>
                </div>
                
                <div style="display: flex; flex-wrap: wrap; gap: var(--space-4);">
                    <button class="btn btn--ghost btn--icon-only">
                        <i data-lucide="edit" class="btn__icon"></i>
                    </button>
                    <button class="btn btn--ghost btn--icon-only">
                        <i data-lucide="eye" class="btn__icon"></i>
                    </button>
                    <button class="btn btn--ghost btn--icon-only">
                        <i data-lucide="trash-2" class="btn__icon"></i>
                    </button>
                    <button class="btn btn--primary btn--icon-only">
                        <i data-lucide="plus" class="btn__icon"></i>
                    </button>
                </div>
            </div>
            
            <!-- BADGES SHOWCASE -->
            <div style="background: var(--surface-primary); border: 1px solid var(--border-primary); border-radius: var(--radius-lg); padding: var(--space-6); margin-bottom: var(--space-8);">
                <h3 style="font-size: var(--font-size-xl); font-weight: var(--font-weight-semibold); margin-bottom: var(--space-6);">
                    Status Badges
                </h3>
                
                <div style="display: flex; flex-wrap: wrap; gap: var(--space-4);">
                    <span class="badge badge--success">
                        <span class="badge__dot"></span>
                        Active
                    </span>
                    <span class="badge badge--warning">
                        <span class="badge__dot"></span>
                        Pending
                    </span>
                    <span class="badge badge--error">
                        <span class="badge__dot"></span>
                        Canceled
                    </span>
                    <span class="badge badge--info">
                        <span class="badge__dot"></span>
                        Completed
                    </span>
                    <span class="badge badge--neutral">
                        Draft
                    </span>
                    <span class="badge badge--success">
                        <i data-lucide="check" style="width: 12px; height: 12px;"></i>
                        Verified
                    </span>
                    <span class="badge badge--error">
                        <i data-lucide="alert-triangle" style="width: 12px; height: 12px;"></i>
                        At Risk
                    </span>
                </div>
            </div>
            
            <!-- PROGRESS INDICATORS -->
            <div style="background: var(--surface-primary); border: 1px solid var(--border-primary); border-radius: var(--radius-lg); padding: var(--space-6);">
                <h3 style="font-size: var(--font-size-xl); font-weight: var(--font-weight-semibold); margin-bottom: var(--space-6);">
                    Progress Indicators
                </h3>
                
                <div style="margin-bottom: var(--space-6);">
                    <p style="font-size: var(--font-size-sm); color: var(--text-secondary); margin-bottom: var(--space-3);">
                        Progress Bars
                    </p>
                    <div style="margin-bottom: var(--space-4);">
                        <div style="display: flex; justify-content: space-between; margin-bottom: var(--space-2);">
                            <span style="font-size: var(--font-size-sm);">25%</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-bar__fill" style="width: 25%;"></div>
                        </div>
                    </div>
                    <div style="margin-bottom: var(--space-4);">
                        <div style="display: flex; justify-content: space-between; margin-bottom: var(--space-2);">
                            <span style="font-size: var(--font-size-sm);">50%</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-bar__fill" style="width: 50%;"></div>
                        </div>
                    </div>
                    <div style="margin-bottom: var(--space-4);">
                        <div style="display: flex; justify-content: space-between; margin-bottom: var(--space-2);">
                            <span style="font-size: var(--font-size-sm);">75%</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-bar__fill" style="width: 75%;"></div>
                        </div>
                    </div>
                    <div>
                        <div style="display: flex; justify-content: space-between; margin-bottom: var(--space-2);">
                            <span style="font-size: var(--font-size-sm); color: var(--color-success-600); font-weight: var(--font-weight-medium);">100% Complete</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-bar__fill" style="width: 100%;"></div>
                        </div>
                    </div>
                </div>
                
                <div>
                    <p style="font-size: var(--font-size-sm); color: var(--text-secondary); margin-bottom: var(--space-3);">
                        Progress Circles
                    </p>
                    <div style="display: flex; gap: var(--space-6); flex-wrap: wrap;">
                        <div class="progress-circle">
                            <svg class="progress-circle__svg" width="60" height="60" viewBox="0 0 60 60">
                                <circle class="progress-circle__bg" cx="30" cy="30" r="24" stroke-width="6"></circle>
                                <circle class="progress-circle__fill" cx="30" cy="30" r="24" stroke-width="6" 
                                        stroke-dasharray="150.8" stroke-dashoffset="113.1"></circle>
                            </svg>
                            <span class="progress-circle__text" style="font-size: var(--font-size-sm);">25%</span>
                        </div>
                        <div class="progress-circle">
                            <svg class="progress-circle__svg" width="60" height="60" viewBox="0 0 60 60">
                                <circle class="progress-circle__bg" cx="30" cy="30" r="24" stroke-width="6"></circle>
                                <circle class="progress-circle__fill" cx="30" cy="30" r="24" stroke-width="6" 
                                        stroke-dasharray="150.8" stroke-dashoffset="75.4"></circle>
                            </svg>
                            <span class="progress-circle__text" style="font-size: var(--font-size-sm);">50%</span>
                        </div>
                        <div class="progress-circle">
                            <svg class="progress-circle__svg" width="60" height="60" viewBox="0 0 60 60">
                                <circle class="progress-circle__bg" cx="30" cy="30" r="24" stroke-width="6"></circle>
                                <circle class="progress-circle__fill" cx="30" cy="30" r="24" stroke-width="6" 
                                        stroke-dasharray="150.8" stroke-dashoffset="37.7"></circle>
                            </svg>
                            <span class="progress-circle__text" style="font-size: var(--font-size-sm);">75%</span>
                        </div>
                        <div class="progress-circle">
                            <svg class="progress-circle__svg" width="60" height="60" viewBox="0 0 60 60">
                                <circle class="progress-circle__bg" cx="30" cy="30" r="24" stroke-width="6"></circle>
                                <circle class="progress-circle__fill" cx="30" cy="30" r="24" stroke-width="6" 
                                        stroke-dasharray="150.8" stroke-dashoffset="0"></circle>
                            </svg>
                            <span class="progress-circle__text" style="font-size: var(--font-size-xs);">
                                <i data-lucide="check" style="width: 20px; height: 20px; color: var(--color-success-600);"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            
        </main>
    </div>
    
    <script>
        lucide.createIcons();
        
        document.getElementById('sidebarToggle').addEventListener('click', () => {
            document.getElementById('adminLayout').classList.toggle('admin-layout--sidebar-collapsed');
        });
        
        document.getElementById('themeToggle').addEventListener('click', () => {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            html.setAttribute('data-theme', newTheme);
            
            const icon = document.querySelector('#themeToggle i');
            icon.setAttribute('data-lucide', newTheme === 'light' ? 'moon' : 'sun');
            lucide.createIcons();
        });
    </script>
</body>
</html>

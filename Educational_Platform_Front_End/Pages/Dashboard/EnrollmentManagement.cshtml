@page
@model Educational_Platform_Front_End.Pages.Dashboard.EnrollmentManagementModel
@{
    ViewData["Title"] = "Enrollment Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/enterprise-design-system.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
}

<div class="admin-layout" id="adminLayout">
    <aside class="admin-layout__sidebar">
        <nav class="admin-sidebar">
            <div class="admin-sidebar__brand">
                <div class="admin-sidebar__logo">E</div>
                <span class="admin-sidebar__brand-text">EduAdmin</span>
            </div>

            <div class="admin-sidebar__nav">
                <div class="admin-sidebar__section">
                    <div class="admin-sidebar__section-title">Overview</div>
                    <a asp-page="/Dashboard/AdminDashboard" class="admin-sidebar__link">
                        <i data-lucide="layout-dashboard" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Dashboard</span>
                    </a>
                </div>

                <div class="admin-sidebar__section">
                    <div class="admin-sidebar__section-title">Content</div>
                    <a asp-page="/Dashboard/CourseManagement" class="admin-sidebar__link">
                        <i data-lucide="book-open" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Courses</span>
                    </a>
                    <a asp-page="/Dashboard/LessonManagement" class="admin-sidebar__link">
                        <i data-lucide="video" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Lessons</span>
                    </a>
                </div>

                <div class="admin-sidebar__section">
                    <div class="admin-sidebar__section-title">Users</div>
                    <a asp-page="/Dashboard/EnrollmentManagement" class="admin-sidebar__link admin-sidebar__link--active">
                        <i data-lucide="users" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Enrollments</span>
                    </a>
                    <a asp-page="/Dashboard/ProgressTracking" class="admin-sidebar__link">
                        <i data-lucide="trending-up" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Progress Tracking</span>
                    </a>
                </div>
            </div>
        </nav>
    </aside>

    <header class="admin-layout__header">
        <div class="admin-header">
            <div class="admin-header__left">
                <button class="admin-header__toggle" id="sidebarToggle" aria-label="Toggle sidebar">
                    <i data-lucide="menu" style="width: 20px; height: 20px;"></i>
                </button>
                <div class="admin-header__search">
                    <i data-lucide="search" class="admin-header__search-icon" style="width: 18px; height: 18px;"></i>
                    <input type="search" class="admin-header__search-input" placeholder="Search enrollments..." aria-label="Search enrollments" id="enrollmentSearch">
                </div>
            </div>

            <div class="admin-header__right">
                <button class="admin-header__toggle" id="themeToggle" aria-label="Toggle theme">
                    <i data-lucide="moon" style="width: 20px; height: 20px;"></i>
                </button>
                <button class="admin-header__toggle" aria-label="Notifications">
                    <i data-lucide="bell" style="width: 20px; height: 20px;"></i>
                </button>
                <div class="admin-header__profile">
                    <div class="admin-header__avatar">AD</div>
                    <div class="admin-header__user-info">
                        <span class="admin-header__user-name">Admin</span>
                        <span class="admin-header__user-role">Platform Admin</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="admin-layout__main">
        <div style="margin-bottom: var(--space-8);">
            <h1 style="font-family: var(--font-display); font-size: var(--font-size-4xl); font-weight: var(--font-weight-bold); color: var(--text-primary); margin-bottom: var(--space-2);">
                Enrollment Management
            </h1>
            <p style="font-size: var(--font-size-base); color: var(--text-secondary);">
                Review enrollments and update active status.
            </p>
        </div>

        <div class="data-table-container">
            <div class="data-table__header">
                <h2 class="data-table__title">All Enrollments</h2>
            </div>

            <div class="data-table__filters">
                <div class="filter-group">
                    <label class="filter-label" for="courseFilter">Course:</label>
                    <select id="courseFilter" class="form-select filter-select">
                        <option value="">All Courses</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label class="filter-label" for="statusFilter">Status:</label>
                    <select id="statusFilter" class="form-select filter-select">
                        <option value="">All</option>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
            </div>

            <table class="data-table" role="table">
                <thead class="data-table__head">
                    <tr class="data-table__row">
                        <th class="data-table__th">Student</th>
                        <th class="data-table__th">Course</th>
                        <th class="data-table__th">Enrolled</th>
                        <th class="data-table__th">Status</th>
                        <th class="data-table__th data-table__td--actions">Actions</th>
                    </tr>
                </thead>
                <tbody id="enrollmentsTableBody">
                    <tr class="data-table__row">
                        <td class="data-table__td" colspan="5">
                            <div class="data-table__loading">
                                <div class="data-table__spinner"></div>
                                <div class="text-small text-muted">Loading enrollments...</div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>
</div>

<div class="modal-overlay" id="deleteEnrollmentModal" style="display: none;">
    <div class="modal confirm-dialog">
        <div class="modal__header">
            <h3 class="modal__title">Delete enrollment</h3>
            <button class="modal__close" type="button" id="closeDeleteEnrollmentModal">
                <i data-lucide="x" style="width: 18px; height: 18px;"></i>
            </button>
        </div>
        <div class="modal__body">
            <div class="confirm-dialog__icon confirm-dialog__icon--danger">
                <i data-lucide="alert-triangle" style="width: 20px; height: 20px;"></i>
            </div>
            <p class="confirm-dialog__message">This will permanently delete the enrollment.</p>
            <p class="confirm-dialog__detail">This action cannot be undone.</p>
            <input type="hidden" id="deleteEnrollmentId" />
        </div>
        <div class="modal__footer">
            <button class="btn btn--secondary" type="button" id="cancelDeleteEnrollment">Cancel</button>
            <button class="btn btn--danger" type="button" id="confirmDeleteEnrollment">Delete</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        const enrollmentsApiBase = 'https://matterhub.runasp.net/api/enrollments';
        const coursesApiBase = 'https://matterhub.runasp.net/api/courses';
        let cachedCourses = [];

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return null;
        }

        function parseJwt(token) {
            try {
                const payload = token.split('.')[1];
                return JSON.parse(atob(payload.replace(/-/g, '+').replace(/_/g, '/')));
            } catch (error) {
                return null;
            }
        }

        function getUserRoles(payload) {
            if (!payload) return [];
            const roles = payload.role || payload.roles || payload['http://schemas.microsoft.com/ws/2008/06/identity/claims/role'];
            if (!roles) return [];
            return Array.isArray(roles) ? roles : [roles];
        }

        function requireAdmin() {
            const token = getCookie('jwt_token');
            if (!token) {
                window.location.href = '/Account/Login';
                return false;
            }
            const payload = parseJwt(token);
            const roles = getUserRoles(payload);
            const isAdmin = roles.some(role => role?.toLowerCase() === 'admin');
            if (!isAdmin) {
                window.location.href = '/Dashboard/Index';
                return false;
            }
            return true;
        }

        function formatDate(dateString) {
            return dateString ? new Date(dateString).toLocaleDateString() : 'â€”';
        }

        function buildEnrollmentRow(enrollment) {
            const courseName = cachedCourses.find(course => course.id === enrollment.courseId)?.title || enrollment.courseId;
            const statusBadge = enrollment.isActive
                ? '<span class="badge badge--success"><span class="badge__dot"></span>Active</span>'
                : '<span class="badge badge--neutral"><span class="badge__dot"></span>Inactive</span>';

            return `
                <tr class="data-table__row">
                    <td class="data-table__td">${enrollment.studentId}</td>
                    <td class="data-table__td">${courseName}</td>
                    <td class="data-table__td">${formatDate(enrollment.enrolledAt)}</td>
                    <td class="data-table__td">${statusBadge}</td>
                    <td class="data-table__td data-table__td--actions">
                        <div class="action-menu">
                            <button class="btn btn--ghost btn--sm" data-action="toggle" data-id="${enrollment.id}" data-active="${enrollment.isActive}">
                                <i data-lucide="refresh-cw" class="btn__icon"></i>
                                Toggle Status
                            </button>
                            <button class="btn btn--danger btn--sm" data-action="delete" data-id="${enrollment.id}">
                                <i data-lucide="trash" class="btn__icon"></i>
                                Delete
                            </button>
                        </div>
                    </td>
                </tr>
            `;
        }

        async function loadCourses() {
            const token = getCookie('jwt_token');
            if (!token) return;
            const response = await fetch(coursesApiBase, {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            cachedCourses = response.ok ? await response.json() : [];
            const courseFilter = document.getElementById('courseFilter');
            if (courseFilter) {
                courseFilter.innerHTML = `<option value="">All Courses</option>` + cachedCourses.map(course =>
                    `<option value="${course.id}">${course.title}</option>`).join('');
            }
        }

        async function loadEnrollments() {
            const token = getCookie('jwt_token');
            if (!token) return;

            const tableBody = document.getElementById('enrollmentsTableBody');
            if (!tableBody) return;

            try {
                const response = await fetch(enrollmentsApiBase, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                if (!response.ok) throw new Error('Failed to fetch enrollments');
                let enrollments = await response.json();

                const courseFilter = document.getElementById('courseFilter')?.value;
                const statusFilter = document.getElementById('statusFilter')?.value;
                if (courseFilter) {
                    enrollments = enrollments.filter(enrollment => enrollment.courseId === courseFilter);
                }
                if (statusFilter) {
                    const isActive = statusFilter === 'active';
                    enrollments = enrollments.filter(enrollment => enrollment.isActive === isActive);
                }

                if (!enrollments.length) {
                    tableBody.innerHTML = `
                        <tr class="data-table__row">
                            <td class="data-table__td" colspan="5">
                                <div class="data-table__empty">
                                    <div class="data-table__empty-title">No enrollments found</div>
                                    <div class="data-table__empty-description">Adjust filters or enroll students.</div>
                                </div>
                            </td>
                        </tr>
                    `;
                    return;
                }

                tableBody.innerHTML = enrollments.map(buildEnrollmentRow).join('');
                lucide.createIcons();
            } catch (error) {
                tableBody.innerHTML = `
                    <tr class="data-table__row">
                        <td class="data-table__td" colspan="5">
                            <div class="data-table__empty">
                                <div class="data-table__empty-title">Unable to load enrollments</div>
                                <div class="data-table__empty-description">${error.message}</div>
                            </div>
                        </td>
                    </tr>
                `;
            }
        }

        async function toggleEnrollment(enrollmentId, isActive) {
            const token = getCookie('jwt_token');
            if (!token) return;
            const response = await fetch(`${enrollmentsApiBase}/${enrollmentId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify({ isActive: !isActive })
            });
            if (!response.ok) {
                const errorText = await response.text();
                alert(errorText || 'Failed to update enrollment');
                return;
            }
            await loadEnrollments();
        }

        function openDeleteEnrollmentModal(enrollmentId) {
            const modal = document.getElementById('deleteEnrollmentModal');
            if (!modal) return;
            document.getElementById('deleteEnrollmentId').value = enrollmentId;
            modal.style.display = 'flex';
            lucide.createIcons();
        }

        function closeDeleteEnrollmentModal() {
            const modal = document.getElementById('deleteEnrollmentModal');
            if (modal) modal.style.display = 'none';
        }

        async function deleteEnrollment() {
            const token = getCookie('jwt_token');
            if (!token) return;
            const enrollmentId = document.getElementById('deleteEnrollmentId').value;
            if (!enrollmentId) return;

            const response = await fetch(`${enrollmentsApiBase}/${enrollmentId}`, {
                method: 'DELETE',
                headers: { 'Authorization': `Bearer ${token}` }
            });

            if (!response.ok) {
                const errorText = await response.text();
                alert(errorText || 'Failed to delete enrollment');
                return;
            }

            closeDeleteEnrollmentModal();
            await loadEnrollments();
        }

        document.addEventListener('DOMContentLoaded', async () => {
            if (!requireAdmin()) return;
            lucide.createIcons();

            const sidebarToggle = document.getElementById('sidebarToggle');
            const adminLayout = document.getElementById('adminLayout');
            if (sidebarToggle && adminLayout) {
                sidebarToggle.addEventListener('click', () => {
                    adminLayout.classList.toggle('admin-layout--sidebar-collapsed');
                });
            }

            const themeToggle = document.getElementById('themeToggle');
            const html = document.documentElement;
            if (themeToggle) {
                themeToggle.addEventListener('click', () => {
                    const currentTheme = html.getAttribute('data-theme');
                    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                    html.setAttribute('data-theme', newTheme);
                    const icon = themeToggle.querySelector('i');
                    if (icon) {
                        icon.setAttribute('data-lucide', newTheme === 'light' ? 'moon' : 'sun');
                        lucide.createIcons();
                    }
                });
            }

            document.getElementById('courseFilter')?.addEventListener('change', loadEnrollments);
            document.getElementById('statusFilter')?.addEventListener('change', loadEnrollments);

            document.getElementById('closeDeleteEnrollmentModal')?.addEventListener('click', closeDeleteEnrollmentModal);
            document.getElementById('cancelDeleteEnrollment')?.addEventListener('click', closeDeleteEnrollmentModal);
            document.getElementById('confirmDeleteEnrollment')?.addEventListener('click', deleteEnrollment);

            document.getElementById('enrollmentsTableBody')?.addEventListener('click', (event) => {
                const button = event.target.closest('button');
                if (!button) return;
                const action = button.dataset.action;
                const enrollmentId = button.dataset.id;
                if (!action || !enrollmentId) return;

                if (action === 'delete') {
                    openDeleteEnrollmentModal(enrollmentId);
                    return;
                }

                if (action === 'toggle') {
                    const isActive = button.dataset.active === 'true';
                    toggleEnrollment(enrollmentId, isActive);
                }
            });

            document.querySelectorAll('.modal-overlay').forEach(overlay => {
                overlay.addEventListener('click', (event) => {
                    if (event.target === overlay) {
                        overlay.style.display = 'none';
                    }
                });
            });

            await loadCourses();
            await loadEnrollments();
        });
    </script>
}

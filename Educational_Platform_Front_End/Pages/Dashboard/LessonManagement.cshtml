@page
@model Educational_Platform_Front_End.Pages.Dashboard.LessonManagementModel
@{
    ViewData["Title"] = "Lesson Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/enterprise-design-system.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
}

<div class="admin-layout" id="adminLayout">
    <aside class="admin-layout__sidebar">
        <nav class="admin-sidebar">
            <div class="admin-sidebar__brand">
                <div class="admin-sidebar__logo">E</div>
                <span class="admin-sidebar__brand-text">EduAdmin</span>
            </div>

            <div class="admin-sidebar__nav">
                <div class="admin-sidebar__section">
                    <div class="admin-sidebar__section-title">Overview</div>
                    <a asp-page="/Dashboard/AdminDashboard" class="admin-sidebar__link">
                        <i data-lucide="layout-dashboard" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Dashboard</span>
                    </a>
                </div>

                <div class="admin-sidebar__section">
                    <div class="admin-sidebar__section-title">Content</div>
                    <a asp-page="/Dashboard/CourseManagement" class="admin-sidebar__link">
                        <i data-lucide="book-open" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Courses</span>
                    </a>
                    <a asp-page="/Dashboard/LessonManagement" class="admin-sidebar__link admin-sidebar__link--active">
                        <i data-lucide="video" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Lessons</span>
                    </a>
                </div>

                <div class="admin-sidebar__section">
                    <div class="admin-sidebar__section-title">Users</div>
                    <a asp-page="/Dashboard/Index" class="admin-sidebar__link">
                        <i data-lucide="users" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Enrollments</span>
                    </a>
                    <a asp-page="/Dashboard/Index" class="admin-sidebar__link">
                        <i data-lucide="trending-up" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Progress Tracking</span>
                    </a>
                    <a asp-page="/Dashboard/Index" class="admin-sidebar__link">
                        <i data-lucide="graduation-cap" class="admin-sidebar__link-icon"></i>
                        <span class="admin-sidebar__link-text">Students</span>
                    </a>
                </div>
            </div>
        </nav>
    </aside>

    <header class="admin-layout__header">
        <div class="admin-header">
            <div class="admin-header__left">
                <button class="admin-header__toggle" id="sidebarToggle" aria-label="Toggle sidebar">
                    <i data-lucide="menu" style="width: 20px; height: 20px;"></i>
                </button>
                <div class="admin-header__search">
                    <i data-lucide="search" class="admin-header__search-icon" style="width: 18px; height: 18px;"></i>
                    <input type="search" class="admin-header__search-input" placeholder="Search lessons..." aria-label="Search lessons" id="lessonSearch">
                </div>
            </div>

            <div class="admin-header__right">
                <button class="admin-header__toggle" id="themeToggle" aria-label="Toggle theme">
                    <i data-lucide="moon" style="width: 20px; height: 20px;"></i>
                </button>
                <button class="admin-header__toggle" aria-label="Notifications">
                    <i data-lucide="bell" style="width: 20px; height: 20px;"></i>
                </button>
                <div class="admin-header__profile">
                    <div class="admin-header__avatar">AD</div>
                    <div class="admin-header__user-info">
                        <span class="admin-header__user-name">Admin</span>
                        <span class="admin-header__user-role">Platform Admin</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="admin-layout__main">
        <div style="margin-bottom: var(--space-8);">
            <h1 style="font-family: var(--font-display); font-size: var(--font-size-4xl); font-weight: var(--font-weight-bold); color: var(--text-primary); margin-bottom: var(--space-2);">
                Lesson Management
            </h1>
            <p style="font-size: var(--font-size-base); color: var(--text-secondary);">
                Create, edit, and organize lessons for each course.
            </p>
        </div>

        <div class="data-table-container">
            <div class="data-table__header">
                <h2 class="data-table__title">All Lessons</h2>
                <div class="data-table__actions">
                    <button class="btn btn--primary btn--sm" id="createLessonBtn">
                        <i data-lucide="plus" class="btn__icon"></i>
                        Create Lesson
                    </button>
                </div>
            </div>

            <div class="data-table__filters">
                <div class="filter-group">
                    <label class="filter-label" for="courseFilter">Course:</label>
                    <select id="courseFilter" class="form-select filter-select">
                        <option value="">All Courses</option>
                    </select>
                </div>
            </div>

            <table class="data-table" role="table">
                <thead class="data-table__head">
                    <tr class="data-table__row">
                        <th class="data-table__th">Lesson</th>
                        <th class="data-table__th">Course</th>
                        <th class="data-table__th">Order</th>
                        <th class="data-table__th">Duration</th>
                        <th class="data-table__th">Updated</th>
                        <th class="data-table__th data-table__td--actions">Actions</th>
                    </tr>
                </thead>
                <tbody id="lessonsTableBody">
                    <tr class="data-table__row">
                        <td class="data-table__td" colspan="6">
                            <div class="data-table__loading">
                                <div class="data-table__spinner"></div>
                                <div class="text-small text-muted">Loading lessons...</div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>
</div>

<div class="modal-overlay" id="lessonModal" style="display: none;">
    <div class="modal modal--lg">
        <div class="modal__header">
            <h3 class="modal__title" id="lessonModalTitle">Create Lesson</h3>
            <button class="modal__close" type="button" id="closeLessonModal">
                <i data-lucide="x" style="width: 18px; height: 18px;"></i>
            </button>
        </div>
        <form class="modal__body" id="lessonForm">
            <div class="form-group">
                <label class="form-label form-label--required" for="lessonCourse">Course</label>
                <select id="lessonCourse" class="form-select" required></select>
            </div>
            <div class="form-group">
                <label class="form-label form-label--required" for="lessonTitle">Title</label>
                <input type="text" id="lessonTitle" class="form-input" required />
            </div>
            <div class="form-group">
                <label class="form-label form-label--required" for="lessonContent">Content / YouTube link</label>
                <textarea id="lessonContent" class="form-textarea" required></textarea>
                <span class="form-hint">Paste a YouTube link or lesson content.</span>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label" for="lessonOrder">Order</label>
                    <input type="number" id="lessonOrder" class="form-input" min="1" required />
                </div>
                <div class="form-group">
                    <label class="form-label" for="lessonDuration">Duration (minutes)</label>
                    <input type="number" id="lessonDuration" class="form-input" min="0" />
                </div>
            </div>
            <input type="hidden" id="lessonId" />
        </form>
        <div class="modal__footer">
            <button class="btn btn--secondary" type="button" id="cancelLessonModal">Cancel</button>
            <button class="btn btn--primary" type="submit" form="lessonForm">Save Lesson</button>
        </div>
    </div>
</div>

<div class="modal-overlay" id="deleteLessonModal" style="display: none;">
    <div class="modal confirm-dialog">
        <div class="modal__header">
            <h3 class="modal__title">Delete lesson</h3>
            <button class="modal__close" type="button" id="closeDeleteLessonModal">
                <i data-lucide="x" style="width: 18px; height: 18px;"></i>
            </button>
        </div>
        <div class="modal__body">
            <div class="confirm-dialog__icon confirm-dialog__icon--danger">
                <i data-lucide="alert-triangle" style="width: 20px; height: 20px;"></i>
            </div>
            <p class="confirm-dialog__message">This will permanently delete the lesson.</p>
            <p class="confirm-dialog__detail">This action cannot be undone.</p>
            <input type="hidden" id="deleteLessonId" />
        </div>
        <div class="modal__footer">
            <button class="btn btn--secondary" type="button" id="cancelDeleteLessonModal">Cancel</button>
            <button class="btn btn--danger" type="button" id="confirmDeleteLesson">Delete</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
        const lessonsApiBase = 'https://matterhub.runasp.net/api/lessons';
        const coursesApiBase = 'https://matterhub.runasp.net/api/courses';
        let cachedCourses = [];

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return null;
        }

        function parseJwt(token) {
            try {
                const payload = token.split('.')[1];
                return JSON.parse(atob(payload.replace(/-/g, '+').replace(/_/g, '/')));
            } catch (error) {
                return null;
            }
        }

        function getUserRoles(payload) {
            if (!payload) return [];
            const roles = payload.role || payload.roles || payload['http://schemas.microsoft.com/ws/2008/06/identity/claims/role'];
            if (!roles) return [];
            return Array.isArray(roles) ? roles : [roles];
        }

        function requireAdmin() {
            const token = getCookie('jwt_token');
            if (!token) {
                window.location.href = '/Account/Login';
                return false;
            }
            const payload = parseJwt(token);
            const roles = getUserRoles(payload);
            const isAdmin = roles.some(role => role?.toLowerCase() === 'admin');
            if (!isAdmin) {
                window.location.href = '/Dashboard/Index';
                return false;
            }
            return true;
        }

        function formatDate(dateString) {
            if (!dateString) return '—';
            return new Date(dateString).toLocaleDateString();
        }

        function buildLessonRow(lesson) {
            const courseName = cachedCourses.find(course => course.id === lesson.courseId)?.title || 'Unknown course';
            return `
                <tr class="data-table__row">
                    <td class="data-table__td">
                        <div style="font-weight: 600;">${lesson.title}</div>
                        <div class="text-small text-muted">${lesson.content?.slice(0, 90) || ''}</div>
                    </td>
                    <td class="data-table__td">${courseName}</td>
                    <td class="data-table__td">${lesson.orderIndex}</td>
                    <td class="data-table__td">${lesson.durationMinutes ?? '—'}</td>
                    <td class="data-table__td">${formatDate(lesson.updatedAt || lesson.createdAt)}</td>
                    <td class="data-table__td data-table__td--actions">
                        <div class="action-menu">
                            <button class="btn btn--ghost btn--sm" data-action="edit" data-id="${lesson.id}">
                                <i data-lucide="edit" class="btn__icon"></i>
                                Edit
                            </button>
                            <button class="btn btn--danger btn--sm" data-action="delete" data-id="${lesson.id}">
                                <i data-lucide="trash" class="btn__icon"></i>
                                Delete
                            </button>
                        </div>
                    </td>
                </tr>
            `;
        }

        async function loadCourses() {
            const token = getCookie('jwt_token');
            if (!token) return;

            const response = await fetch(coursesApiBase, {
                headers: { 'Authorization': `Bearer ${token}` }
            });

            cachedCourses = response.ok ? await response.json() : [];
            const courseSelect = document.getElementById('lessonCourse');
            const courseFilter = document.getElementById('courseFilter');

            if (courseSelect) {
                courseSelect.innerHTML = cachedCourses.map(course =>
                    `<option value="${course.id}">${course.title}</option>`).join('');
            }
            if (courseFilter) {
                courseFilter.innerHTML = `<option value="">All Courses</option>` + cachedCourses.map(course =>
                    `<option value="${course.id}">${course.title}</option>`).join('');
            }
        }

        async function loadLessons() {
            const token = getCookie('jwt_token');
            if (!token) return;

            const tableBody = document.getElementById('lessonsTableBody');
            if (!tableBody) return;

            try {
                const response = await fetch(lessonsApiBase, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                if (!response.ok) throw new Error('Failed to fetch lessons');
                let lessons = await response.json();

                const selectedCourse = document.getElementById('courseFilter')?.value;
                if (selectedCourse) {
                    lessons = lessons.filter(lesson => lesson.courseId === selectedCourse);
                }

                if (!lessons.length) {
                    tableBody.innerHTML = `
                        <tr class="data-table__row">
                            <td class="data-table__td" colspan="6">
                                <div class="data-table__empty">
                                    <div class="data-table__empty-title">No lessons yet</div>
                                    <div class="data-table__empty-description">Create a new lesson to get started.</div>
                                </div>
                            </td>
                        </tr>
                    `;
                    return;
                }

                tableBody.innerHTML = lessons.map(buildLessonRow).join('');
                lucide.createIcons();
            } catch (error) {
                tableBody.innerHTML = `
                    <tr class="data-table__row">
                        <td class="data-table__td" colspan="6">
                            <div class="data-table__empty">
                                <div class="data-table__empty-title">Unable to load lessons</div>
                                <div class="data-table__empty-description">${error.message}</div>
                            </div>
                        </td>
                    </tr>
                `;
            }
        }

        function openLessonModal(lesson = null) {
            const modal = document.getElementById('lessonModal');
            if (!modal) return;

            document.getElementById('lessonId').value = lesson?.id || '';
            document.getElementById('lessonTitle').value = lesson?.title || '';
            document.getElementById('lessonContent').value = lesson?.content || '';
            document.getElementById('lessonOrder').value = lesson?.orderIndex ?? 1;
            document.getElementById('lessonDuration').value = lesson?.durationMinutes ?? '';
            document.getElementById('lessonModalTitle').textContent = lesson ? 'Edit Lesson' : 'Create Lesson';

            if (lesson?.courseId) {
                document.getElementById('lessonCourse').value = lesson.courseId;
            }

            modal.style.display = 'flex';
            lucide.createIcons();
        }

        function closeLessonModal() {
            const modal = document.getElementById('lessonModal');
            if (modal) modal.style.display = 'none';
        }

        function openDeleteLessonModal(lessonId) {
            const modal = document.getElementById('deleteLessonModal');
            if (!modal) return;
            document.getElementById('deleteLessonId').value = lessonId;
            modal.style.display = 'flex';
            lucide.createIcons();
        }

        function closeDeleteLessonModal() {
            const modal = document.getElementById('deleteLessonModal');
            if (modal) modal.style.display = 'none';
        }

        async function submitLessonForm(event) {
            event.preventDefault();
            const token = getCookie('jwt_token');
            if (!token) return;

            const lessonId = document.getElementById('lessonId').value;
            const payload = {
                courseId: document.getElementById('lessonCourse').value,
                title: document.getElementById('lessonTitle').value.trim(),
                content: document.getElementById('lessonContent').value.trim(),
                orderIndex: parseInt(document.getElementById('lessonOrder').value, 10),
                durationMinutes: document.getElementById('lessonDuration').value
                    ? parseInt(document.getElementById('lessonDuration').value, 10)
                    : null
            };

            const response = await fetch(lessonId ? `${lessonsApiBase}/${lessonId}` : lessonsApiBase, {
                method: lessonId ? 'PUT' : 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify(payload)
            });

            if (!response.ok) {
                const errorText = await response.text();
                alert(errorText || 'Failed to save lesson');
                return;
            }

            closeLessonModal();
            await loadLessons();
        }

        async function deleteLesson() {
            const token = getCookie('jwt_token');
            if (!token) return;
            const lessonId = document.getElementById('deleteLessonId').value;
            if (!lessonId) return;

            const response = await fetch(`${lessonsApiBase}/${lessonId}`, {
                method: 'DELETE',
                headers: { 'Authorization': `Bearer ${token}` }
            });

            if (!response.ok) {
                const errorText = await response.text();
                alert(errorText || 'Failed to delete lesson');
                return;
            }

            closeDeleteLessonModal();
            await loadLessons();
        }

        document.addEventListener('DOMContentLoaded', async () => {
            if (!requireAdmin()) return;
            lucide.createIcons();

            const sidebarToggle = document.getElementById('sidebarToggle');
            const adminLayout = document.getElementById('adminLayout');
            if (sidebarToggle && adminLayout) {
                sidebarToggle.addEventListener('click', () => {
                    adminLayout.classList.toggle('admin-layout--sidebar-collapsed');
                });
            }

            const themeToggle = document.getElementById('themeToggle');
            const html = document.documentElement;
            if (themeToggle) {
                themeToggle.addEventListener('click', () => {
                    const currentTheme = html.getAttribute('data-theme');
                    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                    html.setAttribute('data-theme', newTheme);
                    const icon = themeToggle.querySelector('i');
                    if (icon) {
                        icon.setAttribute('data-lucide', newTheme === 'light' ? 'moon' : 'sun');
                        lucide.createIcons();
                    }
                });
            }

            document.getElementById('createLessonBtn')?.addEventListener('click', () => openLessonModal());
            document.getElementById('closeLessonModal')?.addEventListener('click', closeLessonModal);
            document.getElementById('cancelLessonModal')?.addEventListener('click', closeLessonModal);
            document.getElementById('lessonForm')?.addEventListener('submit', submitLessonForm);
            document.getElementById('courseFilter')?.addEventListener('change', loadLessons);

            document.getElementById('closeDeleteLessonModal')?.addEventListener('click', closeDeleteLessonModal);
            document.getElementById('cancelDeleteLessonModal')?.addEventListener('click', closeDeleteLessonModal);
            document.getElementById('confirmDeleteLesson')?.addEventListener('click', deleteLesson);

            document.getElementById('lessonsTableBody')?.addEventListener('click', async (event) => {
                const action = event.target.closest('button')?.dataset?.action;
                const lessonId = event.target.closest('button')?.dataset?.id;
                if (!action || !lessonId) return;

                if (action === 'delete') {
                    openDeleteLessonModal(lessonId);
                    return;
                }

                if (action === 'edit') {
                    const token = getCookie('jwt_token');
                    if (!token) return;
                    const response = await fetch(`${lessonsApiBase}/${lessonId}`, {
                        headers: { 'Authorization': `Bearer ${token}` }
                    });
                    if (!response.ok) return;
                    const lesson = await response.json();
                    openLessonModal(lesson);
                }
            });

            document.querySelectorAll('.modal-overlay').forEach(overlay => {
                overlay.addEventListener('click', (event) => {
                    if (event.target === overlay) {
                        overlay.style.display = 'none';
                    }
                });
            });

            await loadCourses();
            await loadLessons();
        });
    </script>
}

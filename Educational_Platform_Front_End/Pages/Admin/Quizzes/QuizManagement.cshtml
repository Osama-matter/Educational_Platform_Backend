@page "/admin/quizzes"
@model Educational_Platform_Front_End.Pages.Admin.Quizzes.QuizManagementModel

@{ 
    ViewData["Title"] = "Quiz Management";
}

@section Styles {
    <style>
        .management-container {
            max-width: 1100px;
            margin: 0 auto;
        }
        .quiz-card {
            transition: all 0.3s cubic-bezier(.25,.8,.25,1);
            border-radius: 12px;
            border: 1px solid rgba(0,0,0,.125);
            overflow: hidden;
        }
        .quiz-card:hover {
            box-shadow: 0 10px 20px rgba(0,0,0,0.1), 0 6px 6px rgba(0,0,0,0.05);
            transform: translateY(-2px);
        }
        .status-badge {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 700;
            padding: 0.4em 0.8em;
        }
        .action-btn {
            border-radius: 6px;
            padding: 0.4rem 0.8rem;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            font-size: 0.85rem;
            transition: all 0.2s;
        }
        .empty-state {
            padding: 80px 20px;
            text-align: center;
            background: #f8f9fa;
            border-radius: 15px;
            border: 2px dashed #dee2e6;
        }
        .table thead th {
            border-top: none;
            background-color: #f8f9fa;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1px;
            color: #6c757d;
            font-weight: 600;
            padding: 15px;
        }
        .table tbody td {
            vertical-align: middle;
            padding: 15px;
        }
    </style>
}

<div class="management-container mt-4 pb-5">
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h1 class="display-6 fw-bold mb-1"><i class="bi bi-journal-check text-primary me-2"></i>Quiz Management</h1>
            <p class="text-muted mb-0">Monitor, edit, and publish quizzes across your educational platform.</p>
        </div>
        <a asp-page="./Create" class="btn btn-primary btn-lg shadow-sm px-4">
            <i class="bi bi-plus-lg me-2"></i>Create New Quiz
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Error:</strong> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Quizzes.Any())
    {
        <div class="empty-state">
            <i class="bi bi-journal-x display-1 text-muted"></i>
            <h3 class="mt-4 fw-light">No quizzes found</h3>
            <p class="text-muted mb-4">You haven't created any quizzes yet. Start by creating your first assessment.</p>
            <a asp-page="./Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Create First Quiz
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-sm quiz-card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Quiz Title</th>
                            <th>Visibility</th>
                            <th>Configuration</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var quiz in Model.Quizzes)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold text-dark">@quiz.Title</div>
                                    <div class="text-muted small">ID: @quiz.Id.ToString().Substring(0, 8)...</div>
                                </td>
                                <td>
                                    @if (quiz.IsPublished)
                                    {
                                        <span class="badge rounded-pill bg-success status-badge">
                                            <i class="bi bi-check-circle-fill me-1"></i> Published
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-warning text-dark status-badge">
                                            <i class="bi bi-pencil-fill me-1"></i> Draft
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex flex-column gap-1">
                                        <small class="text-muted"><i class="bi bi-clock me-1"></i> @quiz.DurationMinutes mins</small>
                                        <small class="text-muted"><i class="bi bi-trophy me-1"></i> Passing: @quiz.PassingScore/@quiz.TotalScore</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-page="./Build" asp-route-id="@quiz.Id" class="btn btn-outline-primary action-btn" title="Edit Questions">
                                            <i class="bi bi-gear-fill"></i> @(quiz.IsPublished ? "View" : "Build")
                                        </a>
                                        
                                        @if (!quiz.IsPublished)
                                        {
                                            <a asp-page="./Review" asp-route-id="@quiz.Id" class="btn btn-outline-success action-btn" title="Review and Publish">
                                                <i class="bi bi-send-check"></i> Review
                                            </a>
                                        }

                                        <form method="post" asp-page-handler="Delete" asp-route-id="@quiz.Id" 
                                              onsubmit="return confirm('CRITICAL: Are you sure you want to permanently delete this quiz? This action cannot be undone.')" 
                                              style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger action-btn" title="Delete Quiz">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

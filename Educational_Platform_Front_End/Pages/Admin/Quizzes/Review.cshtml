@page "/admin/quizzes/review/{id:guid}"
@model Educational_Platform_Front_End.Pages.Admin.Quizzes.ReviewModel

@{ 
    ViewData["Title"] = "Review and Publish Quiz";
}

<h1>Review and Publish Quiz: @Model.Quiz?.Title</h1>
<p>Review the quiz content and validation status below. Once all checks pass, you can publish the quiz.</p>

<hr />

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.Quiz != null)
{
    <!-- Validation Summary -->
    <div class="card mb-4">
        <div class="card-header">
            <h4>Validation Status</h4>
        </div>
        <div class="card-body">
            @if (Model.IsValidForPublishing)
            {
                <div class="alert alert-success">This quiz passes all validation checks and is ready to be published.</div>
            }
            else
            {
                <div class="alert alert-warning">
                    <p>This quiz has the following issues and cannot be published:</p>
                    <ul>
                        @foreach (var error in Model.ValidationErrors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>

    <!-- Quiz Content Review -->
    <h2>Quiz Content</h2>
    @foreach (var question in Model.Quiz.Questions)
    {
        <div class="card mb-3">
            <div class="card-body">
                <p><strong>@question.Text</strong> (Score: @question.Score)</p>
                <ul class="list-group">
                    @foreach (var option in question.Options)
                    {
                        <li class="list-group-item @(option.IsCorrect ? "list-group-item-success" : "")">
                            @option.Text
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    <hr />
    <div class="mt-4">
        @if (Model.IsValidForPublishing)
        {
            <form method="post" asp-page-handler="Publish" asp-route-id="@Model.Quiz.Id">
                <button type="submit" class="btn btn-success">Publish Quiz</button>
            </form>
        }
        <a asp-page="./Build" asp-route-id="@Model.Quiz.Id" class="btn btn-secondary">Back to Build Page</a>
    </div>
}

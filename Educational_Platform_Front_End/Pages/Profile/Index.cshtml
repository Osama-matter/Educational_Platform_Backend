@page
@model Educational_Platform_Front_End.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Profile";
}

<section class="section">
    <div class="container">
        <div class="grid" style="grid-template-columns: minmax(0, 2fr) minmax(260px, 1fr); gap: var(--spacing-8);">
            <div>
                <div class="card" style="padding: var(--spacing-8);">
                    <div class="flex items-center gap-4">
                        <div class="badge badge--primary" style="width: 56px; height: 56px; border-radius: 50%; justify-content: center;">OA</div>
                        <div>
                            <h1 class="heading-3">Osama Ahmed</h1>
                            <p class="text-small text-muted">Product Designer Â· Cairo</p>
                        </div>
                    </div>
                    <div class="grid grid--cols-2 mt-6">
                        <div>
                            <p class="text-small text-muted">Email</p>
                            <p class="font-medium">osama.ahmed@eduplatform.com</p>
                        </div>
                        <div>
                            <p class="text-small text-muted">Plan</p>
                            <p class="font-medium">Professional Annual</p>
                        </div>
                        <div>
                            <p class="text-small text-muted">Role</p>
                            <p class="font-medium">Learner</p>
                        </div>
                        <div>
                            <p class="text-small text-muted">Joined</p>
                            <p class="font-medium">Aug 2025</p>
                        </div>
                    </div>
                </div>

                <div class="card mt-6" style="padding: var(--spacing-6);">
                    <h3 class="heading-4">Learning preferences</h3>
                    <div class="mt-4">
                        <label class="form__checkbox mb-2"><input type="checkbox" checked /> Weekly mentor check-ins</label>
                        <label class="form__checkbox mb-2"><input type="checkbox" checked /> Product management recommendations</label>
                        <label class="form__checkbox"><input type="checkbox" /> Notify me about live cohorts</label>
                    </div>
                    <button class="btn btn--primary mt-4" type="button">Save preferences</button>
                </div>

                <div class="card mt-6" style="padding: var(--spacing-6);">
                    <h3 class="heading-4">Security settings</h3>
                    <div class="mt-4">
                        <label class="form__label">Change password</label>
                        <input class="form__input" type="password" placeholder="New password" />
                        <label class="form__label mt-4">Two-factor authentication</label>
                        <select class="form__select">
                            <option>Enabled</option>
                            <option>Disabled</option>
                        </select>
                    </div>
                    <button class="btn btn--secondary mt-4" type="button">Update security</button>
                </div>
            </div>

            <aside>
                <div class="dashboard-card mb-6">
                    <h3 class="heading-5">Progress snapshot</h3>
                    <div class="progress mt-4">
                        <div class="progress__bar" style="width: 78%;"></div>
                    </div>
                    <p class="text-small text-muted mt-2">78% of annual goal completed</p>
                </div>
                <div class="card" style="padding: var(--spacing-6);">
                    <h3 class="heading-5">Certificates</h3>
                    <div class="mt-4">
                        <p class="font-medium">Product Strategy Sprint</p>
                        <p class="text-small text-muted">Issued Dec 2025</p>
                    </div>
                    <div class="mt-4">
                        <p class="font-medium">Modern Software Engineering</p>
                        <p class="text-small text-muted">Issued Oct 2025</p>
                    </div>
                    <button class="btn btn--ghost btn--full mt-4" type="button">Share certificates</button>
                </div>
            </aside>
        </div>
    </div>
</section>

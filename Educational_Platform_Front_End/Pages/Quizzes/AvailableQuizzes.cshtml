@page "/quizzes"
@model Educational_Platform_Front_End.Pages.Quizzes.AvailableQuizzesModel
@{
    ViewData["Title"] = "Available Quizzes";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 font-weight-bold text-primary">Available Quizzes</h1>
            <p class="text-muted lead">Test your knowledge and track your progress across different courses.</p>
        </div>
        <div class="stats-card p-3 bg-white rounded shadow-sm border">
            <div class="d-flex align-items-center">
                <div class="bg-primary-light p-2 rounded mr-3">
                    <i class="lucide-brain text-primary" style="width: 24px; height: 24px;"></i>
                </div>
                <div>
                    <span class="d-block font-weight-bold">@Model.Quizzes.Count</span>
                    <small class="text-muted">Active Quizzes</small>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-lg border-0 shadow-sm mb-4" role="alert">
            <i class="lucide-alert-circle mr-2"></i> @Model.ErrorMessage
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (Model.Quizzes == null || !Model.Quizzes.Any())
    {
        <div class="text-center py-5 empty-state bg-white rounded shadow-sm border">
            <div class="empty-state__icon mb-4">
                <i class="lucide-clipboard-list text-muted" style="width: 64px; height: 64px;"></i>
            </div>
            <h3 class="h4 text-dark">No quizzes available right now</h3>
            <p class="text-muted mx-auto" style="max-width: 400px;">Check back later or explore our courses to see if any new assessments have been published.</p>
            <a asp-page="/Courses/Index" class="btn btn-primary px-4 py-2 rounded-pill mt-3">Browse Courses</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var quiz in Model.Quizzes)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm transition-up quiz-card rounded-xl overflow-hidden">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <span class="badge badge-soft-primary px-2 py-1">Quiz</span>
                                <div class="text-muted small d-flex align-items-center">
                                    <i class="lucide-clock mr-1" style="width: 14px; height: 14px;"></i>
                                    @quiz.DurationMinutes mins
                                </div>
                            </div>
                            
                            <h5 class="card-title font-weight-bold text-dark mb-2">@quiz.Title</h5>
                            <p class="card-text text-muted small mb-4 line-clamp-2">
                                Test your understanding of the material covered in this section.
                            </p>

                            <div class="d-flex align-items-center mb-4 text-muted small">
                                <div class="mr-3">
                                    <i class="lucide-help-circle mr-1" style="width: 14px; height: 14px;"></i>
                                    Multiple Choice
                                </div>
                                <div>
                                    <i class="lucide-award mr-1" style="width: 14px; height: 14px;"></i>
                                    Score: 100
                                </div>
                            </div>

                            <form method="post" asp-page-handler="StartAttempt" asp-route-quizId="@quiz.Id">
                                <button type="submit" class="btn btn-primary btn-block rounded-pill py-2 font-weight-bold d-flex align-items-center justify-content-center">
                                    Start Quiz <i class="lucide-chevron-right ml-2" style="width: 16px; height: 16px;"></i>
                                </button>
                            </form>
                        </div>
                        <div class="card-footer bg-gray-50 border-0 py-2 px-4">
                            <small class="text-muted">Assessment</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .rounded-xl { border-radius: 1rem !important; }
    .bg-primary-light { background-color: rgba(79, 70, 229, 0.1); }
    .badge-soft-primary { background-color: rgba(79, 70, 229, 0.1); color: #4f46e5; }
    .transition-up { transition: transform 0.3s ease, box-shadow 0.3s ease; }
    .transition-up:hover { transform: translateY(-8px); box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important; }
    .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
    .bg-gray-50 { background-color: #f9fafb; }
    .empty-state { border: 2px dashed #e5e7eb; }
</style>

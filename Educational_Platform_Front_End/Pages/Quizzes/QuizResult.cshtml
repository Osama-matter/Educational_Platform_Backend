@page "/quiz/result/{id:guid}"
@model Educational_Platform_Front_End.Pages.Quizzes.QuizResultModel

@{ 
    ViewData["Title"] = "Quiz Result";
}

<h1>Quiz Submitted!</h1>

@if (Model.QuizAttempt != null)
{
    <div class="alert alert-success">
        <h4 class="alert-heading">Congratulations!</h4>
        <p>You have completed the quiz.</p>
        <hr>
        <p class="mb-0">Your final score is: <strong>@Model.QuizAttempt.TotalScore</strong></p>
    </div>
}
else
{
    <p>Loading result...</p>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
}

<a asp-page="./AvailableQuizzes" class="btn btn-info">Back to Quizzes</a>

@page
@model Educational_Platform_Front_End.Pages.Payment.FailureModel
@{
    ViewData["Title"] = "Payment Failed";
}

<div class="container mt-5 pt-5 text-center">
    <div class="card shadow-lg p-5 border-0 rounded-lg mx-auto" style="max-width: 600px;">
        <div class="mb-4">
            <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                <i class="lucide-x" style="width: 48px; height: 48px;"></i>
            </div>
        </div>
        <h1 class="display-4 text-danger mb-3">Payment Failed</h1>
        <p class="lead text-muted mb-4">We're sorry, but your transaction could not be completed. No charges were made.</p>
        
        <div class="d-grid gap-3">
            <a asp-page="/Courses/Index" class="btn btn-primary btn-lg rounded-pill">
                Try Again
            </a>
            <a asp-page="/Index" class="btn btn-outline-secondary rounded-pill">
                Return Home
            </a>
        </div>
    </div>
</div>

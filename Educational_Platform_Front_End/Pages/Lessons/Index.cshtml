@page
@model Educational_Platform_Front_End.Pages.Lessons.IndexModel
@{
    ViewData["Title"] = "Lessons";
}

<div class="container pt-8 pb-8">
    <h1 class="heading-2 mb-4">Lessons</h1>

    @if (Model.Lessons != null && Model.Lessons.Any())
    {
        <div class="lesson-list">
            @foreach (var lesson in Model.Lessons)
            {
                <div class="lesson-item card">
                    <div class="lesson-item__info">
                        <h3 class="heading-5">@lesson.Title</h3>
                        <p class="text-small text-muted">Duration: @(lesson.DurationMinutes?.ToString() ?? "N/A") minutes</p>
                    </div>
                    <div class="lesson-item__actions">
                        <a asp-page="/Lessons/Details" asp-route-id="@lesson.Id" class="btn btn--primary btn--sm">View Lesson</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No lessons available for this course.</p>
    }
</div>
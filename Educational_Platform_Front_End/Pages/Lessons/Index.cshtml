@page
@model Educational_Platform_Front_End.Pages.Lessons.IndexModel
@{
    ViewData["Title"] = "Lessons";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Lessons</h1>
    <a asp-page="/Lessons/Create" asp-route-courseId="@Model.CourseId" class="btn btn-primary">Add New Lesson</a>
</div>

@if (Model.Lessons != null && Model.Lessons.Any())
{
    <ul class="list-group">
        @foreach (var lesson in Model.Lessons)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">@lesson.Title</h5>
                    <small>Duration: @(lesson.DurationMinutes?.ToString() ?? "N/A") minutes</small>
                </div>
                <a asp-page="/Lessons/Details" asp-route-id="@lesson.Id" class="btn btn-sm btn-info">View</a>
            </li>
        }
    </ul>
}
else
{
    <p>No lessons found for this course.</p>
}

<div class="mt-4">
    <a asp-page="/Courses/Details" asp-route-id="@Model.CourseId" class="btn btn-secondary">Back to Course</a>
</div>

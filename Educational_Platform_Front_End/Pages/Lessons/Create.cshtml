@page
@model Educational_Platform_Front_End.Pages.Lessons.CreateModel
@{
    ViewData["Title"] = "Create Lesson";
}

<section class="section">
    <div class="container">
        <div class="grid" style="grid-template-columns: minmax(0, 2fr) minmax(240px, 1fr); gap: var(--spacing-8);">
            <div class="card" style="padding: var(--spacing-8);">
                <p class="text-small text-muted">Lesson builder</p>
                <h2 class="heading-3">@ViewData["Title"]</h2>
                <p class="text-muted">Add a lesson with clear objectives and rich content.</p>
                <form method="post" class="mt-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Lesson.CourseId" />
                    <div class="form__group">
                        <label asp-for="Lesson.Title" class="form__label"></label>
                        <input asp-for="Lesson.Title" class="form__input" />
                        <span asp-validation-for="Lesson.Title" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Lesson.Content" class="form__label"></label>
                        <textarea asp-for="Lesson.Content" class="form__textarea" rows="8"></textarea>
                        <span asp-validation-for="Lesson.Content" class="form__error"></span>
                        <span class="form__help-text">Tip: paste a YouTube link in the content to auto-embed the video (e.g., https://youtu.be/VIDEO_ID).</span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Lesson.OrderIndex" class="form__label"></label>
                        <input asp-for="Lesson.OrderIndex" class="form__input" />
                        <span asp-validation-for="Lesson.OrderIndex" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Lesson.DurationMinutes" class="form__label"></label>
                        <input asp-for="Lesson.DurationMinutes" class="form__input" />
                        <span asp-validation-for="Lesson.DurationMinutes" class="form__error"></span>
                    </div>
                    <div class="flex items-center gap-4 mt-6">
                        <button type="submit" class="btn btn--primary">Create lesson</button>
                        <a asp-page="/Courses/Details" asp-route-id="@Model.CourseId" class="btn btn--secondary">Cancel</a>
                    </div>
                </form>
            </div>

            <aside class="dashboard-card">
                <h3 class="heading-5">Lesson tips</h3>
                <ul class="text-small text-muted mt-4" style="line-height: 1.8;">
                    <li>✔ Start with a measurable objective.</li>
                    <li>✔ Keep lessons under 15 minutes.</li>
                    <li>✔ Add practice prompts in the content.</li>
                </ul>
            </aside>
        </div>
    </div>
</section>

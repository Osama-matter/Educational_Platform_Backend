    <!-- ===== Featured Courses ===== -->
    <section class="courses-section">
        <div class="container">
            <div class="section-header">
                <h2>Featured Courses</h2>
                <p class="section-subtitle">Hand-picked courses from industry experts to boost your skills</p>
            </div>

            <div class="courses-grid">
                @if (Model.Courses != null && Model.Courses.Any())
                {
                    foreach (var course in Model.Courses.Take(6))
                    {
                        <article class="course-card">
                            <img src="@(string.IsNullOrWhiteSpace(course.Image_URl) ? "/images/course-placeholder.jpg" : course.Image_URl)" alt="@course.Title" class="course-image">
                            <div class="course-content">
                                <h3 class="course-title">@course.Title</h3>
                                <p class="course-description">
                                    @if (!string.IsNullOrWhiteSpace(course.Description) && course.Description.Length > 140)
                                    {
                                        @course.Description.Substring(0, 140)
                            
                                        <text>...</text>
                                    }
                                    else
                                    {
                                        @course.Description
                                    }
                                </p>
                                <div class="course-meta">
                                    <div class="course-instructor">
                                        <div class="instructor-avatar">EP</div>
                                        <span>EduPlatform</span>
                                    </div>
                                    <div class="course-duration">
                                        <i class="far fa-clock"></i> @(course.EstimatedDurationHours?.ToString() ?? "N/A") hours
                                    </div>
                                </div>
                                <div class="course-actions">
                                    <a asp-page="/Courses/Details" asp-route-id="@course.Id" class="btn btn-primary btn-enroll">View course</a>
                                </div>
                            </div>
                        </article>
                    }
                }
                else
                {
                    <div class="course-card" style="grid-column: 1 / -1;">
                        <div class="course-content">
                            <h3 class="course-title">No courses available</h3>
                            <p class="course-description">Courses will appear here once they are published.</p>
                            <a asp-page="/Courses/Create" class="btn btn-primary btn-enroll">Create a course</a>
                        </div>
                    </div>
                }
            </div>

            <div class="view-all-courses">
                <a asp-page="/Courses/Index" class="btn btn-secondary">View All Courses <i class="fas fa-arrow-right"></i></a>
            </div>
        </div>
    </section>


@page
@model Educational_Platform_Front_End.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}



<section class="hero">
    <div class="container">
        <h1>Transform Your Career<br>with Expert-Led Learning</h1>
        <p>Master in-demand skills through structured courses taught by industry experts. Join 500,000+ learners building successful careers.</p>
        <div class="hero-buttons">
            <a href="#courses" class="btn btn-primary">Browse Courses</a>
            <a href="#how-it-works" class="btn btn-secondary">View Curriculum</a>
        </div>
    </div>
</section>

<section class="benefits">
    <div class="container">
        <div class="section-header">
            <h2>Why Choose EduLearn</h2>
            <p>Everything you need to accelerate your learning journey.</p>
        </div>
        <div class="benefits-grid">
            <div class="benefit-card">
                <div class="benefit-icon">🎓</div>
                <h3>Expert Instructors</h3>
                <p>Learn from industry professionals with real-world experience.</p>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon">📊</div>
                <h3>Structured Curriculum</h3>
                <p>Comprehensive learning paths from beginner to expert.</p>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon">🏆</div>
                <h3>Verified Certificates</h3>
                <p>Earn recognized certificates to showcase your achievements.</p>
            </div>
            <div class="benefit-card">
                <div class="benefit-icon">⏰</div>
                <h3>Flexible Learning</h3>
                <p>Study at your own pace, anytime and anywhere.</p>
            </div>
        </div>
    </div>
</section>

<section id="courses">
    <div class="container">
        <div class="section-header">
            <h2>Featured Courses</h2>
            <p>Explore our most popular courses designed for your goals.</p>
        </div>
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert--danger" style="margin-bottom: 2rem;">
                <div asp-validation-summary="All"></div>
            </div>
        }

        <div class="courses-grid">
            @if (!ViewData.ModelState.IsValid || (Model.Courses != null && !Model.Courses.Any()))
            {
                <div style="grid-column: 1/-1; margin-bottom: 2rem; padding: 1.5rem; background: #fff7ed; border: 1px solid #ffedd5; border-radius: 12px; color: #9a3412;">
                    <h4 style="margin-bottom: 0.5rem; font-weight: 700;">Home Page Debug Status</h4>
                    <div asp-validation-summary="All"></div>
                    @if (Model.Courses != null && !Model.Courses.Any())
                    {
                        <p>Status: API connection successful, but 0 courses were loaded into the view model.</p>
                    }
                </div>
            }

            @if (Model.Courses != null && Model.Courses.Any())
            {
                <div style="grid-column: 1/-1; background: #f0fdf4; color: #15803d; padding: 0.75rem 1rem; border-radius: 6px; margin-bottom: 2rem; font-size: 0.875rem; border: 1px solid #bbf7d0;">
                    <strong>Success:</strong> Found @Model.Courses.Count() courses for the homepage.
                </div>
                foreach (var course in Model.Courses)
                {
                    <div class="course-card">
                        <img src="@course.Image_URl" alt="@course.Title" class="course-thumbnail-img" />
                        <div class="course-content">
                            <div class="course-meta">
                                <span>⏱️ @(course.EstimatedDurationHours?.ToString() ?? "N/A")h</span>
                                <span class="badge @(course.IsActive ? "badge--success" : "badge--danger")">@(course.IsActive ? "Active" : "Inactive")</span>
                            </div>
                            <h3>@course.Title</h3>
                      
                            <div class="course-footer">
                                <a asp-page="/Courses/Details" asp-route-id="@course.Id" class="btn btn-primary">View Course</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div style="grid-column: 1/-1; text-align: center;">
                    <p>No courses available at the moment. Please check back later.</p>
                </div>
            }
        </div>
    </div>
</section>


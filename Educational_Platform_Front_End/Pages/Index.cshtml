@page
@model Educational_Platform_Front_End.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "All Courses";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LearnSphere | Enterprise Learning Management System</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/enterprise-design-system.css">
    <link rel="icon" type="image/png" href="favicon.png">
    

</head>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EduPlatform Enterprise - Transform Your Organization</title>
    <meta name="description" content="Enterprise learning solutions with custom integrations, white-label options, and dedicated support for organizations that demand excellence.">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Styles -->
    <link rel="stylesheet" href="enterprise.css">
</head>
<body>

    <!-- ===== ENTERPRISE HERO SECTION ===== -->
    <section class="enterprise-hero">
        <div class="enterprise-hero__background">
            <div class="enterprise-hero__gradient"></div>
            <div class="enterprise-hero__grid"></div>
        </div>

        <div class="container">
            <div class="enterprise-hero__content">
                <!-- Badge Label -->
                <div class="enterprise-hero__label">
                    <span class="enterprise-hero__label-text">Enterprise Solutions</span>
                    <div class="enterprise-hero__label-glow"></div>
                </div>

                <!-- Main Title -->
                <h1 class="enterprise-hero__title">
                    <span class="enterprise-hero__title-line">Transform Your</span>
                    <span class="enterprise-hero__title-line enterprise-hero__title-line--accent">Organization's Learning</span>
                </h1>

                <!-- Subtitle -->
                <p class="enterprise-hero__subtitle">
                    Deploy enterprise-grade learning infrastructure that scales with your team.
                    Custom integrations, white-label solutions, and dedicated support for organizations that demand excellence.
                </p>

                <!-- CTA Buttons -->
                <div class="enterprise-hero__cta">
                    <button class="btn-enterprise btn-enterprise--primary">
                        Schedule Consultation
                        <svg class="btn-enterprise__icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path d="M4 10h12M10 4l6 6-6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </button>
                    <button class="btn-enterprise btn-enterprise--secondary">
                        View Case Studies
                    </button>
                </div>

                <!-- Hero Stats -->
                <div class="enterprise-hero__stats">
                    <div class="enterprise-stat">
                        <div class="enterprise-stat__value">500K+</div>
                        <div class="enterprise-stat__label">Enterprise Users</div>
                    </div>
                    <div class="enterprise-stat">
                        <div class="enterprise-stat__value">98.7%</div>
                        <div class="enterprise-stat__label">Satisfaction Rate</div>
                    </div>
                    <div class="enterprise-stat">
                        <div class="enterprise-stat__value">24/7</div>
                        <div class="enterprise-stat__label">Dedicated Support</div>
                    </div>
                </div>
            </div>

            <!-- Floating Dashboard Card -->
            <div class="enterprise-hero__visual">
                <div class="enterprise-card enterprise-card--floating">
                    <div class="enterprise-card__header">
                        <div class="enterprise-card__icon">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <rect x="3" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" />
                                <rect x="14" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" />
                                <rect x="3" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" />
                                <rect x="14" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2" />
                            </svg>
                        </div>
                        <div>
                            <div class="enterprise-card__title">Learning Dashboard</div>
                            <div class="enterprise-card__subtitle">Real-time Analytics</div>
                        </div>
                    </div>
                    <div class="enterprise-card__metric">
                        <div class="enterprise-card__metric-value">+47%</div>
                        <div class="enterprise-card__metric-trend">↗ Engagement Growth</div>
                    </div>
                    <div class="enterprise-card__chart">
                        <div class="chart-bar" style="--height: 40%; --delay: 0s;"></div>
                        <div class="chart-bar" style="--height: 55%; --delay: 0.1s;"></div>
                        <div class="chart-bar" style="--height: 70%; --delay: 0.2s;"></div>
                        <div class="chart-bar" style="--height: 85%; --delay: 0.3s;"></div>
                        <div class="chart-bar" style="--height: 100%; --delay: 0.4s;"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ===== TRUST BANNER ===== -->
    <section class="trust-banner">
        <div class="container">
            <p class="trust-banner__label">Trusted by Industry Leaders</p>
            <div class="trust-banner__logos">
                <div class="trust-logo">TechCorp</div>
                <div class="trust-logo">InnovateCo</div>
                <div class="trust-logo">GlobalBank</div>
                <div class="trust-logo">MedHealth</div>
                <div class="trust-logo">EduGlobal</div>
                <div class="trust-logo">FinanceHub</div>
            </div>
        </div>
    </section>

    <!-- ===== FEATURES SHOWCASE ===== -->
    <section class="enterprise-features">
        <div class="container">
            <!-- Section Header -->
            <div class="section-header section-header--centered">
                <span class="section-label">Platform Capabilities</span>
                <h2 class="section-title">Built for Enterprise Scale</h2>
                <p class="section-description">
                    Advanced features engineered for organizations with complex learning requirements
                </p>
            </div>

            <!-- Features Grid -->
            <div class="features-grid">

                <!-- Feature 1: SSO & Security -->
                <div class="feature-showcase">
                    <div class="feature-showcase__visual">
                        <div class="feature-icon feature-icon--large">
                            <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                                <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                            </svg>
                        </div>
                    </div>
                    <div class="feature-showcase__content">
                        <h3 class="feature-showcase__title">SSO & Advanced Security</h3>
                        <p class="feature-showcase__description">
                            Seamless single sign-on integration with SAML 2.0, OAuth 2.0, and Active Directory.
                            Role-based access control, audit logs, and SOC 2 Type II compliance.
                        </p>
                        <ul class="feature-showcase__list">
                            <li>Multi-factor authentication</li>
                            <li>Data encryption at rest and in transit</li>
                            <li>Compliance reporting dashboard</li>
                            <li>Custom security policies</li>
                        </ul>
                    </div>
                </div>

                <!-- Feature 2: Custom Integration Hub -->
                <div class="feature-showcase feature-showcase--reverse">
                    <div class="feature-showcase__visual">
                        <div class="feature-icon feature-icon--large">
                            <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                                <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2" />
                                <path d="M3 9H21" stroke="currentColor" stroke-width="2" />
                                <path d="M9 21V9" stroke="currentColor" stroke-width="2" />
                            </svg>
                        </div>
                    </div>
                    <div class="feature-showcase__content">
                        <h3 class="feature-showcase__title">Custom Integration Hub</h3>
                        <p class="feature-showcase__description">
                            Connect EduPlatform to your existing tech stack with our comprehensive API suite.
                            Pre-built integrations for Salesforce, Slack, Microsoft Teams, and 50+ tools.
                        </p>
                        <ul class="feature-showcase__list">
                            <li>RESTful API with 99.99% uptime</li>
                            <li>Webhooks for real-time events</li>
                            <li>Custom LMS integrations</li>
                            <li>Dedicated integration support</li>
                        </ul>
                    </div>
                </div>

                <!-- Feature 3: White-Label & Branding -->
                <div class="feature-showcase">
                    <div class="feature-showcase__visual">
                        <div class="feature-icon feature-icon--large">
                            <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                                <path d="M21 16V8C21 6.89543 20.1046 6 19 6H5C3.89543 6 3 6.89543 3 8V16C3 17.1046 3.89543 18 5 18H19C20.1046 18 21 17.1046 21 16Z" stroke="currentColor" stroke-width="2" />
                                <path d="M3 10H21" stroke="currentColor" stroke-width="2" />
                                <circle cx="7" cy="14" r="1" fill="currentColor" />
                            </svg>
                        </div>
                    </div>
                    <div class="feature-showcase__content">
                        <h3 class="feature-showcase__title">White-Label & Branding</h3>
                        <p class="feature-showcase__description">
                            Deploy a fully branded learning experience that matches your corporate identity.
                            Custom domains, branded certificates, and personalized email templates.
                        </p>
                        <ul class="feature-showcase__list">
                            <li>Custom domain and SSL</li>
                            <li>Brand guidelines enforcement</li>
                            <li>Personalized learner journeys</li>
                            <li>Branded mobile applications</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- ===== ANALYTICS SHOWCASE ===== -->
    <section class="analytics-showcase">
        <div class="container">
            <div class="analytics-grid">

                <!-- Analytics Content -->
                <div class="analytics-content">
                    <span class="section-label">Enterprise Analytics</span>
                    <h2 class="section-title">Data-Driven Learning Intelligence</h2>
                    <p class="section-description">
                        Transform learning data into actionable insights with our advanced analytics engine.
                        Track engagement, measure ROI, and identify skill gaps across your organization.
                    </p>

                    <div class="analytics-features">
                        <div class="analytics-feature">
                            <div class="analytics-feature__icon">📊</div>
                            <div>
                                <h4 class="analytics-feature__title">Custom Dashboards</h4>
                                <p class="analytics-feature__text">Build department-specific views with drag-and-drop widgets</p>
                            </div>
                        </div>
                        <div class="analytics-feature">
                            <div class="analytics-feature__icon">🎯</div>
                            <div>
                                <h4 class="analytics-feature__title">Skill Gap Analysis</h4>
                                <p class="analytics-feature__text">Identify competency gaps and recommend targeted learning paths</p>
                            </div>
                        </div>
                        <div class="analytics-feature">
                            <div class="analytics-feature__icon">📈</div>
                            <div>
                                <h4 class="analytics-feature__title">ROI Measurement</h4>
                                <p class="analytics-feature__text">Calculate training impact on business performance metrics</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Analytics Visual Dashboard -->
                <div class="analytics-visual">
                    <div class="analytics-dashboard">
                        <div class="analytics-dashboard__header">
                            <div class="analytics-dashboard__title">Learning Performance</div>
                            <div class="analytics-dashboard__controls">
                                <span class="analytics-pill">Live</span>
                                <span class="analytics-pill">Q4 2025</span>
                            </div>
                        </div>
                        <div class="analytics-dashboard__metrics">
                            <div class="metric-card">
                                <div class="metric-card__label">Completion Rate</div>
                                <div class="metric-card__value">94.3%</div>
                                <div class="metric-card__change">+12.4%</div>
                            </div>
                            <div class="metric-card">
                                <div class="metric-card__label">Active Learners</div>
                                <div class="metric-card__value">12,847</div>
                                <div class="metric-card__change">+8.7%</div>
                            </div>
                        </div>
                        <div class="analytics-dashboard__chart">
                            <div class="progress-ring">
                                <svg viewBox="0 0 100 100">
                                    <circle cx="50" cy="50" r="45" class="progress-ring__background" />
                                    <circle cx="50" cy="50" r="45" class="progress-ring__progress" style="--progress: 0.78;" />
                                </svg>
                                <div class="progress-ring__label">78%<br><span>Engagement</span></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- ===== PRICING TIERS ===== -->
    <section class="enterprise-pricing">
        <div class="container">

            <!-- Section Header -->
            <div class="section-header section-header--centered">
                <span class="section-label">Flexible Plans</span>
                <h2 class="section-title">Enterprise Pricing</h2>
                <p class="section-description">
                    Transparent, scalable pricing designed for organizations of all sizes
                </p>
            </div>

            <!-- Pricing Cards Grid -->
            <div class="pricing-grid">

                <!-- Team Plan -->
                <div class="pricing-card">
                    <div class="pricing-card__header">
                        <h3 class="pricing-card__name">Team</h3>
                        <p class="pricing-card__description">For growing departments</p>
                    </div>
                    <div class="pricing-card__price">
                        <span class="pricing-card__amount">$49</span>
                        <span class="pricing-card__period">per user/month</span>
                    </div>
                    <ul class="pricing-card__features">
                        <li>Up to 250 users</li>
                        <li>SSO integration</li>
                        <li>Basic analytics</li>
                        <li>Email support</li>
                        <li>Standard integrations</li>
                    </ul>
                    <button class="btn-pricing">Start Free Trial</button>
                </div>

                <!-- Business Plan (Featured) -->
                <div class="pricing-card pricing-card--featured">
                    <div class="pricing-card__badge">Most Popular</div>
                    <div class="pricing-card__header">
                        <h3 class="pricing-card__name">Business</h3>
                        <p class="pricing-card__description">For mid-size organizations</p>
                    </div>
                    <div class="pricing-card__price">
                        <span class="pricing-card__amount">$89</span>
                        <span class="pricing-card__period">per user/month</span>
                    </div>
                    <ul class="pricing-card__features">
                        <li>Up to 1,000 users</li>
                        <li>Advanced SSO & MFA</li>
                        <li>Custom analytics dashboards</li>
                        <li>Priority support</li>
                        <li>API access</li>
                        <li>White-label options</li>
                        <li>Custom integrations</li>
                    </ul>
                    <button class="btn-pricing btn-pricing--primary">Request Demo</button>
                </div>

                <!-- Enterprise Plan -->
                <div class="pricing-card">
                    <div class="pricing-card__header">
                        <h3 class="pricing-card__name">Enterprise</h3>
                        <p class="pricing-card__description">For large organizations</p>
                    </div>
                    <div class="pricing-card__price">
                        <span class="pricing-card__amount">Custom</span>
                        <span class="pricing-card__period">tailored to your needs</span>
                    </div>
                    <ul class="pricing-card__features">
                        <li>Unlimited users</li>
                        <li>Dedicated infrastructure</li>
                        <li>Custom analytics & reporting</li>
                        <li>24/7 dedicated support</li>
                        <li>Full API suite</li>
                        <li>Complete white-label</li>
                        <li>Custom development</li>
                        <li>SLA guarantees</li>
                    </ul>
                    <button class="btn-pricing">Contact Sales</button>
                </div>

            </div>
        </div>
    </section>

    <!-- ===== TESTIMONIALS ===== -->
    <section class="enterprise-testimonials">
        <div class="container">

            <!-- Section Header -->
            <div class="section-header section-header--centered">
                <span class="section-label">Client Success</span>
                <h2 class="section-title">What Enterprise Leaders Say</h2>
            </div>

            <!-- Testimonials Showcase -->
            <div class="testimonials-showcase">

                <!-- Testimonial 1 -->
                <div class="testimonial-card-enterprise">
                    <div class="testimonial-card-enterprise__quote">
                        "EduPlatform transformed how we train our global workforce. The analytics alone
                        have helped us save 40% on training costs while improving completion rates."
                    </div>
                    <div class="testimonial-card-enterprise__author">
                        <div class="testimonial-card-enterprise__avatar">KM</div>
                        <div>
                            <div class="testimonial-card-enterprise__name">Karen Mitchell</div>
                            <div class="testimonial-card-enterprise__role">Chief Learning Officer, TechCorp</div>
                        </div>
                    </div>
                    <div class="testimonial-card-enterprise__metrics">
                        <div class="testimonial-metric">
                            <div class="testimonial-metric__value">40%</div>
                            <div class="testimonial-metric__label">Cost Reduction</div>
                        </div>
                        <div class="testimonial-metric">
                            <div class="testimonial-metric__value">15K+</div>
                            <div class="testimonial-metric__label">Active Users</div>
                        </div>
                    </div>
                </div>

                <!-- Testimonial 2 -->
                <div class="testimonial-card-enterprise">
                    <div class="testimonial-card-enterprise__quote">
                        "The seamless integration with our existing systems was impressive. Our team
                        was up and running within days, not months."
                    </div>
                    <div class="testimonial-card-enterprise__author">
                        <div class="testimonial-card-enterprise__avatar">RS</div>
                        <div>
                            <div class="testimonial-card-enterprise__name">Robert Singh</div>
                            <div class="testimonial-card-enterprise__role">VP of Engineering, InnovateCo</div>
                        </div>
                    </div>
                    <div class="testimonial-card-enterprise__metrics">
                        <div class="testimonial-metric">
                            <div class="testimonial-metric__value">3 Days</div>
                            <div class="testimonial-metric__label">Setup Time</div>
                        </div>
                        <div class="testimonial-metric">
                            <div class="testimonial-metric__value">98%</div>
                            <div class="testimonial-metric__label">User Satisfaction</div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- ===== FINAL CTA SECTION ===== -->
    <section class="enterprise-cta">
        <div class="container">
            <div class="enterprise-cta__content">
                <h2 class="enterprise-cta__title">Ready to Transform Your Learning Strategy?</h2>
                <p class="enterprise-cta__subtitle">
                    Join 500+ organizations using EduPlatform to build world-class learning programs
                </p>
                <div class="enterprise-cta__actions">
                    <button class="btn-enterprise btn-enterprise--primary btn-enterprise--large">
                        Schedule a Demo
                        <svg class="btn-enterprise__icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path d="M4 10h12M10 4l6 6-6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </button>
                    <button class="btn-enterprise btn-enterprise--ghost btn-enterprise--large">
                        Download Enterprise Guide
                    </button>
                </div>
                <p class="enterprise-cta__note">
                    No credit card required • 30-day trial • Free migration support
                </p>
            </div>
        </div>
        <div class="enterprise-cta__background">
            <div class="enterprise-cta__glow enterprise-cta__glow--1"></div>
            <div class="enterprise-cta__glow enterprise-cta__glow--2"></div>
        </div>
    </section>

    <!-- JavaScript -->
    <script src="enterprise.js"></script>

</body>
</html>

@page
@model Educational_Platform_Front_End.Pages.Courses.CreateModel
@{
    ViewData["Title"] = "Create Course";
}

<section class="section">
    <div class="container">
        <div class="grid" style="grid-template-columns: minmax(0, 2fr) minmax(240px, 1fr); gap: var(--spacing-8);">
            <div class="card" style="padding: var(--spacing-8);">
                <p class="text-small text-muted">Course setup</p>
                <h2 class="heading-3">@ViewData["Title"]</h2>
                <p class="text-muted">Create a new course with structured content and clear outcomes.</p>
                <form method="post" enctype="multipart/form-data" class="mt-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form__group">
                        <label asp-for="Course.Title" class="form__label"></label>
                        <input asp-for="Course.Title" class="form__input" />
                        <span asp-validation-for="Course.Title" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Course.Description" class="form__label"></label>
                        <textarea asp-for="Course.Description" class="form__textarea" rows="6"></textarea>
                        <span asp-validation-for="Course.Description" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Course.EstimatedDurationHours" class="form__label"></label>
                        <input asp-for="Course.EstimatedDurationHours" class="form__input" />
                        <span asp-validation-for="Course.EstimatedDurationHours" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Course.Price" class="form__label"></label>
                        <input asp-for="Course.Price" class="form__input" type="number" step="0.01" />
                        <span asp-validation-for="Course.Price" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label class="form__checkbox">
                            <input asp-for="Course.IsActive" /> @Html.DisplayNameFor(model => model.Course.IsActive)
                        </label>
                    </div>
                    <div class="form__group">
                        <label asp-for="Course.ImageFile" class="form__label"></label>
                        <input asp-for="Course.ImageFile" class="form__input" type="file" />
                        <span asp-validation-for="Course.ImageFile" class="form__error"></span>
                    </div>
                    <div class="flex items-center gap-4 mt-6">
                        <button type="submit" class="btn btn--primary">Create course</button>
                        <a asp-page="/Courses/Index" class="btn btn--secondary">Cancel</a>
                    </div>
                </form>
            </div>

            <aside class="dashboard-card">
                <h3 class="heading-5">Publishing checklist</h3>
                <ul class="text-small text-muted mt-4" style="line-height: 1.8;">
                    <li>✔ Define learning outcomes</li>
                    <li>✔ Upload a cover image</li>
                    <li>✔ Add at least 3 lessons</li>
                    <li>✔ Set the course status</li>
                </ul>
            </aside>
        </div>
    </div>
</section>

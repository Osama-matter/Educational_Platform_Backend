@page "/course/{id:guid}"
@model Educational_Platform_Front_End.Pages.Courses.CourseDetailsModel

@{ 
    ViewData["Title"] = Model.Course?.Title ?? "Course Details";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="container py-3">
        <div class="alert alert-danger mb-0">@Model.ErrorMessage</div>
    </div>
}

@if (Model.Course != null)
{
    <div class="container py-4">
        <h1 class="h3 mb-2">@Model.Course.Title</h1>
        <p class="text-muted mb-4">@Model.Course.Description</p>

        <h2 class="h5 mb-3">Lessons</h2>
        <div class="list-group">
            @foreach (var lesson in Model.Course.Lessons)
            {
                <div class="list-group-item">
                    <div class="d-flex flex-column flex-sm-row w-100 justify-content-between align-items-start align-items-sm-center gap-2">
                        <h5 class="mb-0">@lesson.Title</h5>
                        <a asp-page="/Lessons/Details" asp-route-id="@lesson.Id" class="btn btn-outline-primary btn-sm w-100 w-sm-auto">Open Lesson</a>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="container py-4">
        <p class="mb-0">Loading course details...</p>
    </div>
}

@page "/course/{id:guid}"
@model Educational_Platform_Front_End.Pages.Courses.CourseDetailsModel

@{ 
    ViewData["Title"] = Model.Course?.Title ?? "Course Details";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.Course != null)
{
    <h1>@Model.Course.Title</h1>
    <p>@Model.Course.Description</p>

    <h2>Lessons</h2>
    <div class="list-group">
        @foreach (var lesson in Model.Course.Lessons)
        {
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <h5 class="mb-1">@lesson.Title</h5>
                    @if (lesson.Quiz != null)
                    {
                        <form method="post" asp-page-handler="StartQuiz" asp-route-quizId="@lesson.Quiz.Id">
                            <button type="submit" class="btn btn-primary btn-sm">
                                @(lesson.QuizAttempts.Any() ? "Retake Quiz" : "Start Quiz")
                            </button>
                        </form>
                    }
                </div>
                @if (lesson.QuizAttempts != null && lesson.QuizAttempts.Any())
                {
                    <div class="mt-3">
                        <h6>Your Past Attempts:</h6>
                        <ul class="list-unstyled">
                            @foreach (var attempt in lesson.QuizAttempts)
                            {
                                <li>
                                    <span>Score: @attempt.TotalScore, Submitted: @attempt.SubmittedAt.ToString("g")</span>
                                    <a asp-page="../Quizzes/QuizResult" asp-route-id="@attempt.Id" class="ms-2">View Result</a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        }
    </div>
}
else
{
    <p>Loading course details...</p>
}

@page "/course/{id:guid}"
@model Educational_Platform_Front_End.Pages.Courses.CourseDetailsModel

@{ 
    ViewData["Title"] = Model.Course?.Title ?? "Course Details";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.Course != null)
{
    <h1>@Model.Course.Title</h1>
    <p>@Model.Course.Description</p>

    <h2>Lessons</h2>
    <div class="list-group">
        @foreach (var lesson in Model.Course.Lessons)
        {
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <h5 class="mb-1">@lesson.Title</h5>
                    <a asp-page="/Lessons/Details" asp-route-id="@lesson.Id" class="btn btn-outline-primary btn-sm">Open Lesson</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Loading course details...</p>
}

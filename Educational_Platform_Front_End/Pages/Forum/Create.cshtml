@page
@model Educational_Platform_Front_End.Pages.Forum.CreateModel
@{
    ViewData["Title"] = "Start New Thread";
}

<div class="container pt-8 pb-8">
    <div class="max-w-2xl mx-auto">
        <div class="mb-8">
            <a asp-page="/Forum/Index" class="btn btn--ghost btn--sm mb-4">
                <i class="lucide-chevron-left mr-1"></i> Back to Forum
            </a>
            <h1 class="heading-3">Start a New Discussion</h1>
            <p class="text-muted">Share your questions or knowledge with the community.</p>
        </div>

        <div class="card" style="padding: var(--spacing-8);">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-4"></div>

                <div class="form-group mb-6">
                    <label asp-for="Input.Title" class="form-label">Thread Title</label>
                    <input asp-for="Input.Title" class="form-control" placeholder="What is your discussion about?" required />
                    <span asp-validation-for="Input.Title" class="text-tiny text-danger"></span>
                </div>

                <div class="form-group mb-6">
                    <label asp-for="Input.Description" class="form-label">Description / Initial Content</label>
                    <textarea asp-for="Input.Description" class="form-control" rows="8" placeholder="Provide more details for your discussion..." required></textarea>
                    <span asp-validation-for="Input.Description" class="text-tiny text-danger"></span>
                </div>

                <div class="flex gap-4">
                    <button type="submit" class="btn btn--primary">Create Thread</button>
                    <a asp-page="/Forum/Index" class="btn btn--outline">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

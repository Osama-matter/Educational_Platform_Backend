@page
@model Educational_Platform_Front_End.Pages.Certificates.IndexModel
@{
    ViewData["Title"] = "My Certificates";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Certificates</h1>
        <div class="text-muted">
            <i class="lucide-award mr-2"></i> @Model.Certificates.Count certificates earned
        </div>
    </div>

    @if (Model.Certificates == null || !Model.Certificates.Any())
    {
        <div class="text-center py-5 border rounded bg-light">
            <i class="lucide-scroll text-muted mb-3" style="width: 48px; height: 48px;"></i>
            <h3>No certificates yet</h3>
            <p class="text-muted">Complete courses to earn official certificates of completion.</p>
            <a asp-page="/Courses/Index" class="btn btn-primary mt-3">Browse Courses</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var cert in Model.Certificates)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 transition-hover">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary-light p-3 rounded-circle mr-3">
                                    <i class="lucide-file-badge text-primary" style="width: 24px; height: 24px;"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-0">@cert.CourseTitle</h5>
                                    <small class="text-muted">Issued on @cert.IssuedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="small text-uppercase text-muted font-weight-bold mb-1">Certificate Number</div>
                                <code class="bg-light p-1 rounded">@cert.CertificateNumber</code>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <a href="@Model.GetDownloadUrl(cert.Id)" target="_blank" class="btn btn-outline-primary btn-sm d-flex align-items-center">
                                    <i class="lucide-download mr-2" style="width: 14px; height: 14px;"></i> Download PDF
                                </a>
                                @if(cert.IsRevoked)
                                {
                                    <span class="badge badge-danger">Revoked</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">Valid</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .bg-primary-light { background-color: rgba(79, 70, 229, 0.1); }
    .transition-hover:hover { transform: translateY(-5px); transition: all 0.3s ease; }
</style>

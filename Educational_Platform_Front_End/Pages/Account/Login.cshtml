@page
@model Educational_Platform_Front_End.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<section class="section">
    <div class="container">
        <div class="auth-layout">
            <div class="auth-card">
                <p class="text-small text-muted">Welcome back</p>
                <h2 class="heading-3">Sign in to EduPlatform</h2>
                <p class="text-muted">Access your learning dashboard, certificates, and team programs.</p>
                <form method="post" class="mt-6">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form__group">
                        <label asp-for="Input.Email" class="form__label"></label>
                        <input asp-for="Input.Email" class="form__input" />
                        <span asp-validation-for="Input.Email" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Input.Password" class="form__label"></label>
                        <input asp-for="Input.Password" class="form__input" />
                        <span asp-validation-for="Input.Password" class="form__error"></span>
                    </div>
                    <button type="submit" class="btn btn--primary btn--full">Log in</button>
                </form>
                <p class="text-small text-muted mt-4">Need an account? <a asp-page="/Account/Register">Create one</a></p>
            </div>
            <div class="auth-hero">
                <span class="auth-hero__badge">Enterprise-ready</span>
                <h3 class="heading-4 mt-4">Drive learning outcomes at scale</h3>
                <p class="text-muted">Track progress, assign cohorts, and align teams with measurable skill growth.</p>
                <ul class="text-small text-muted mt-6" style="line-height: 1.8;">
                    <li>✔ Centralized analytics dashboard</li>
                    <li>✔ Role-based learning paths</li>
                    <li>✔ Secure content governance</li>
                </ul>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model Educational_Platform_Front_End.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="section">
    <div class="container">
        <div class="auth-layout">
            <div class="auth-card">
                <p class="text-small text-muted">Create your account</p>
                <h2 class="heading-3">Start learning with EduPlatform</h2>
                <p class="text-muted">Join enterprise-ready programs designed for measurable growth.</p>
                <form id="registerForm" class="mt-6">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form__group">
                        <label asp-for="Input.Username" class="form__label"></label>
                        <input asp-for="Input.Username" class="form__input" />
                        <span asp-validation-for="Input.Username" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Input.Email" class="form__label"></label>
                        <input asp-for="Input.Email" class="form__input" />
                        <span asp-validation-for="Input.Email" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Input.Password" class="form__label"></label>
                        <input asp-for="Input.Password" class="form__input" />
                        <span asp-validation-for="Input.Password" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Input.FirstName" class="form__label"></label>
                        <input asp-for="Input.FirstName" class="form__input" />
                        <span asp-validation-for="Input.FirstName" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Input.LastName" class="form__label"></label>
                        <input asp-for="Input.LastName" class="form__input" />
                        <span asp-validation-for="Input.LastName" class="form__error"></span>
                    </div>
                    <button type="submit" class="btn btn--primary btn--full">Create account</button>
                </form>
                <p class="text-small text-muted mt-4">Already have an account? <a asp-page="/Account/Login">Sign in</a></p>
            </div>
            <div class="auth-hero">
                <span class="auth-hero__badge">Enterprise programs</span>
                <h3 class="heading-4 mt-4">Build skills your teams trust</h3>
                <p class="text-muted">Get personalized learning plans, coaching sessions, and progress reporting.</p>
                <div class="stat-grid mt-6">
                    <div class="stat-card">
                        <p class="stat-card__value">2.4x</p>
                        <p class="text-small text-muted">Faster onboarding with guided paths</p>
                    </div>
                    <div class="stat-card">
                        <p class="stat-card__value">78%</p>
                        <p class="text-small text-muted">Learners complete within 30 days</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('registerForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const username = document.querySelector('input[name="Input.Username"]').value;
            const email = document.querySelector('input[name="Input.Email"]').value;
            const password = document.querySelector('input[name="Input.Password"]').value;
            const firstName = document.querySelector('input[name="Input.FirstName"]').value;
            const lastName = document.querySelector('input[name="Input.LastName"]').value;

            fetch('https://matterhub.runasp.net/api/Account/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username, email, password, firstName, lastName })
            })
            .then(async response => {
                if (response.ok) {
                    return response.json();
                } else {
                    const errorText = await response.text();
                    throw new Error(errorText || 'Registration failed');
                }
            })
            .then(data => {
                console.log('Registration successful', data);
                alert('Registration successful!');
                window.location.href = '/Account/Login'; // Redirect to login page
            })
            .catch(error => {
                console.error('Error:', error);
                alert(error.message);
            });
        });
    </script>
}

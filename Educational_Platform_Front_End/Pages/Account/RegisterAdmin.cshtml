@page
@model Educational_Platform_Front_End.Pages.Account.RegisterAdminModel
@{
    ViewData["Title"] = "Create Admin Account";
}

<section class="section">
    <div class="container">
        <div class="auth-layout">
            <div class="auth-card">
                <p class="text-small text-muted">Admin access</p>
                <h2 class="heading-3">@ViewData["Title"]</h2>
                <p class="text-muted">Create an administrator account with elevated permissions.</p>
                <form id="adminRegisterForm" class="mt-6">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form__group">
                        <label asp-for="Input.Username" class="form__label"></label>
                        <input asp-for="Input.Username" class="form__input" />
                        <span asp-validation-for="Input.Username" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Input.Email" class="form__label"></label>
                        <input asp-for="Input.Email" class="form__input" />
                        <span asp-validation-for="Input.Email" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Input.Password" class="form__label"></label>
                        <input asp-for="Input.Password" class="form__input" />
                        <span asp-validation-for="Input.Password" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Input.FirstName" class="form__label"></label>
                        <input asp-for="Input.FirstName" class="form__input" />
                        <span asp-validation-for="Input.FirstName" class="form__error"></span>
                    </div>
                    <div class="form__group">
                        <label asp-for="Input.LastName" class="form__label"></label>
                        <input asp-for="Input.LastName" class="form__input" />
                        <span asp-validation-for="Input.LastName" class="form__error"></span>
                    </div>
                    <button type="submit" class="btn btn--primary btn--full">Create admin</button>
                </form>
                <p class="text-small text-muted mt-4">Return to <a asp-page="/Dashboard/Index">dashboard</a>.</p>
            </div>
            <div class="auth-hero">
                <span class="auth-hero__badge">Admin tools</span>
                <h3 class="heading-4 mt-4">Manage platform operations</h3>
                <p class="text-muted">Admins can publish courses, manage lessons, and monitor enrollments.</p>
                <ul class="text-small text-muted mt-6" style="line-height: 1.8;">
                    <li>✔ Course & lesson management</li>
                    <li>✔ Enrollment insights</li>
                    <li>✔ Progress analytics</li>
                </ul>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('adminRegisterForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const username = document.querySelector('input[name="Input.Username"]').value;
            const email = document.querySelector('input[name="Input.Email"]').value;
            const password = document.querySelector('input[name="Input.Password"]').value;
            const firstName = document.querySelector('input[name="Input.FirstName"]').value;
            const lastName = document.querySelector('input[name="Input.LastName"]').value;

            fetch('https://matterhub.runasp.net/api/Account/register-admin', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username, email, password, firstName, lastName })
            })
            .then(async response => {
                if (response.ok) {
                    return response.json();
                }
                const errorText = await response.text();
                throw new Error(errorText || 'Admin creation failed');
            })
            .then(() => {
                if (typeof showToast === 'function') {
                    showToast('Admin account created successfully.');
                }
                document.getElementById('adminRegisterForm').reset();
            })
            .catch(error => {
                console.error('Admin register error:', error);
                if (typeof showToast === 'function') {
                    showToast(error.message || 'Admin creation failed');
                }
            });
        });
    </script>
}

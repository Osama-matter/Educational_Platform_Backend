@page
@model Educational_Platform_Front_End.Pages.Account.DetailsModel
@{
    ViewData["Title"] = "My Account";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account-details.css" asp-append-version="true" />
}

<div class="account-page-wrapper">
    <div class="container">
        <header class="account-header">
            <h1>@ViewData["Title"]</h1>
            <p>Manage your profile, settings, and security.</p>
        </header>

        <div class="account-layout">
            <main>
                <div class="card">
                    <div class="card-header">
                        <h3>Profile Information</h3>
                        <button class="btn btn--secondary btn--sm">Edit Profile</button>
                    </div>
                    <div class="card-body">
                        @if (Model.UserDetails != null)
                        {
                            <div class="profile-details">
                                <div class="profile-avatar">
                                    @Model.UserDetails.Username.FirstOrDefault().ToString().ToUpper()
                                </div>
                                <div class="profile-info">
                                    <dl>
                                        <div>
                                            <dt>Username</dt>
                                            <dd>@Model.UserDetails.Username</dd>
                                        </div>
                                        <div>
                                            <dt>Email</dt>
                                            <dd>@Model.UserDetails.Email</dd>
                                        </div>
                                        <div>
                                            <dt>First Name</dt>
                                            <dd>@Model.UserDetails.FirstName</dd>
                                        </div>
                                        <div>
                                            <dt>Last Name</dt>
                                            <dd>@Model.UserDetails.LastName</dd>
                                        </div>
                                    </dl>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p>Loading user details...</p>
                        }
                    </div>
                </div>
            </main>

            <aside>
                <div class="card">
                    <div class="card-header">
                        <h3>Security</h3>
                    </div>
                    <div class="card-body">
                        <div class="setting-item">
                            <div>
                                <h4>Multi-Factor Authentication</h4>
                                <p>Protect your account with an extra layer of security.</p>
                            </div>
                            <span class="badge badge--success">Enabled</span>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</div>
